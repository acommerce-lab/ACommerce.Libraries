modules = ["dotnet-7.0", "web", "nodejs-20", "dotnet-9.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AshareWeb"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AshareApi"

[[workflows.workflow]]
name = "AshareWeb"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Apps/Ashare.Web && dotnet run -c Release"
waitForPort = 5000

[[workflows.workflow]]
name = "AshareApi"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Apps/Ashare.Api && dotnet bin/Release/net9.0/Ashare.Api.dll --urls \"http://0.0.0.0:3000\""
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 45711
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd Examples/ACommerce.MarketplaceApi && ASPNETCORE_URLS=http://0.0.0.0:5000 dotnet bin/Release/net9.0/ACommerce.MarketplaceApi.dll"]
build = ["bash", "-c", "cd Examples/ACommerce.MarketplaceApi && dotnet build ACommerce.MarketplaceApi.csproj -c Release -m:1 --no-restore -p:CopyBuildOutputToOutputDirectory=true -p:CopyOutputSymbolsToOutputDirectory=true"]
