modules = ["dotnet-7.0", "web", "nodejs-20", "dotnet-9.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AshareWeb"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AshareApi"

[[workflows.workflow]]
name = "AshareWeb"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Apps/Ashare.Web && dotnet run --urls \"http://0.0.0.0:5000\""
waitForPort = 5000

[[workflows.workflow]]
name = "AshareApi"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Apps/Ashare.Api && dotnet run --urls \"http://0.0.0.0:3000\""
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 39879
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "dotnet publish/api/Ashare.Api.dll --urls http://0.0.0.0:3000 & dotnet publish/web/Ashare.Web.dll --urls http://0.0.0.0:5000"]
build = ["bash", "-c", "cd Apps/Ashare.Api && dotnet publish -c Release -o ../../publish/api && cd ../Ashare.Web && dotnet publish -c Release -o ../../publish/web"]
