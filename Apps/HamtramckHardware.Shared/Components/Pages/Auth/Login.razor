@page "/login"
@using ACommerce.Templates.Customer.Components
@inject ILocalizationService L
@inject IAppNavigationService Navigation
@inject TokenManager TokenManager
@inject AuthClient AuthClient

<div class="ac-page ac-auth-page ac-login-page">
    <div class="ac-auth-card">
        <div class="ac-auth-header" style="text-align: center;">
            <i class="bi bi-tools" style="font-size: 3rem; color: var(--ac-primary);"></i>
            <h1 style="margin-top: 16px;">Welcome Back</h1>
            <p>Sign in to your account</p>
        </div>

        <form class="ac-auth-form" @onsubmit="HandleLogin" @onsubmit:preventDefault>
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="ac-alert ac-alert-danger">
                    <i class="bi bi-exclamation-circle"></i>
                    @_errorMessage
                </div>
            }

            <AcInput Label="Email"
                     Type="email"
                     @bind-Value="_loginModel.Email"
                     Placeholder="you@example.com"
                     IconStart="bi-envelope"
                     Required="true" />

            <AcInput Label="Password"
                     Type="password"
                     @bind-Value="_loginModel.Password"
                     Placeholder="••••••••"
                     IconStart="bi-lock"
                     Required="true" />

            <div class="ac-form-options" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
                <label class="ac-checkbox" style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                    <input type="checkbox" @bind="_loginModel.RememberMe" />
                    <span>Remember me</span>
                </label>
                <a href="/forgot-password" class="ac-link">Forgot Password?</a>
            </div>

            <AcButton Text="@(_isLoading ? "Signing in..." : "Login")"
                      Type="submit"
                      Icon="bi-box-arrow-in-right"
                      Variant="ButtonVariant.Primary"
                      Block="true"
                      Size="ButtonSize.Large"
                      Loading="@_isLoading"
                      Disabled="@_isLoading" />
        </form>

        <div class="ac-auth-footer" style="text-align: center; margin-top: 24px;">
            <span>Don't have an account?</span>
            <a href="/register" class="ac-link" style="margin-left: 4px;">Create Account</a>
        </div>

        <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid var(--ac-border);">
            <AcButton Text="Continue as Guest"
                      Icon="bi-person"
                      Variant="ButtonVariant.Secondary"
                      Outline="true"
                      Block="true"
                      OnClick="ContinueAsGuest" />
        </div>
    </div>
</div>

@code {
    private LoginModel _loginModel = new();
    private bool _isLoading = false;
    private string? _errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        var token = await TokenManager.GetTokenAsync();
        if (!string.IsNullOrEmpty(token))
        {
            Navigation.NavigateTo("/");
        }
    }

    private async Task HandleLogin()
    {
        try
        {
            _isLoading = true;
            _errorMessage = null;
            StateHasChanged();

            await Task.Delay(1000);

            var mockToken = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwiZW1haWwiOiJ0ZXN0QGV4YW1wbGUuY29tIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c";
            TokenManager.SetToken(mockToken, DateTime.UtcNow.AddDays(30));

            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            _errorMessage = "Invalid email or password. Please try again.";
            Console.WriteLine($"[Login] Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ContinueAsGuest()
    {
        Navigation.NavigateTo("/");
    }

    private class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public bool RememberMe { get; set; } = false;
    }
}
