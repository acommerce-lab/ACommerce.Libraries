    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Driver Theme: Blue -->
    <Color x:Key="Primary">#3B82F6</Color>
    <Color x:Key="PrimaryDark">#2563EB</Color>
    <Color x:Key="PrimaryLight">#60A5FA</Color>
    <Color x:Key="Secondary">#22C55E</Color>
    <Color x:Key="Background">#EFF6FF</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Success">#22C55E</Color>
    <Color x:Key="Warning">#F59E0B</Color>

    <Color x:Key="TextPrimary">#1F2937</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>
    <Color x:Key="Border">#E5E7EB</Color>

    <Color x:Key="PageBackgroundColor">#EFF6FF</Color>

