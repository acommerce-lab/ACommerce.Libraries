<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors - Sky Blue Theme -->
    <Color x:Key="Primary">#0EA5E9</Color>
    <Color x:Key="PrimaryDark">#0284C7</Color>
    <Color x:Key="PrimaryLight">#38BDF8</Color>

    <!-- Secondary Colors - Violet -->
    <Color x:Key="Secondary">#8B5CF6</Color>
    <Color x:Key="SecondaryDark">#7C3AED</Color>
    <Color x:Key="SecondaryLight">#A78BFA</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Info">#06B6D4</Color>

    <!-- Neutral Colors -->
    <Color x:Key="White">#ffffff</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#f3f4f6</Color>
    <Color x:Key="Gray200">#e5e7eb</Color>
    <Color x:Key="Gray300">#d1d5db</Color>
    <Color x:Key="Gray400">#9ca3af</Color>
    <Color x:Key="Gray500">#6b7280</Color>
    <Color x:Key="Gray600">#4b5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1f2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- Page Colors -->
    <Color x:Key="PageBackgroundColor">#ffffff</Color>
    <Color x:Key="PageBackgroundColorDark">#0f172a</Color>

</ResourceDictionary>
