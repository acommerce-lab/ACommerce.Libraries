<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ═══════════════════════════════════════════════════════════════
         Ashare Visual Identity 2025 - Brand Colors
         عشير - الهوية البصرية
         ═══════════════════════════════════════════════════════════════ -->

    <!-- Primary Colors - Deep Olive Green (الأخضر الزيتوني العميق)
         Symbolizes: Trust, Stability, Sustainability -->
    <Color x:Key="Primary">#345454</Color>
    <Color x:Key="PrimaryDark">#263F3F</Color>
    <Color x:Key="PrimaryLight">#4A6B6B</Color>

    <!-- Secondary Colors - Soft Orange (البرتقالي الناعم)
         Represents: Vitality, Optimism, Positive Energy -->
    <Color x:Key="Secondary">#F4844C</Color>
    <Color x:Key="SecondaryDark">#E06D34</Color>
    <Color x:Key="SecondaryLight">#F69B6B</Color>

    <!-- Accent Color - Uses Secondary Orange -->
    <Color x:Key="Accent">#F4844C</Color>
    <Color x:Key="AccentDark">#E06D34</Color>
    <Color x:Key="AccentLight">#F69B6B</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Info">#345454</Color>

    <!-- Neutral Colors - Warm Stone Tones (aligned with brand identity) -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Cream">#FFFCF9</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray50">#FDFCFB</Color>
    <Color x:Key="Gray100">#FAF8F6</Color>
    <Color x:Key="Gray200">#F0EDE9</Color>
    <Color x:Key="Gray300">#E0DCD6</Color>
    <Color x:Key="Gray400">#A8A29E</Color>
    <Color x:Key="Gray500">#78716C</Color>
    <Color x:Key="Gray600">#57534E</Color>
    <Color x:Key="Gray700">#44403C</Color>
    <Color x:Key="Gray800">#292524</Color>
    <Color x:Key="Gray900">#1C1917</Color>

    <!-- Page Colors -->
    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="PageBackgroundColorDark">#1C1917</Color>

    <!-- Surface Colors -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceAlt">#FAF8F6</Color>
    <Color x:Key="SurfaceDark">#292524</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#1C1917</Color>
    <Color x:Key="TextSecondary">#57534E</Color>
    <Color x:Key="TextMuted">#78716C</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    <Color x:Key="TextOnSecondary">#FFFFFF</Color>

    <!-- Border Colors -->
    <Color x:Key="Border">#E0DCD6</Color>
    <Color x:Key="BorderLight">#F0EDE9</Color>
    <Color x:Key="BorderDark">#D6D3D1</Color>

</ResourceDictionary>
