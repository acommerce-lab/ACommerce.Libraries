{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ashare.db"
  },
  "Jwt": {
    "Secret": "your-super-secret-key-for-jwt-authentication-min-32-chars",
    "Issuer": "ashare-api",
    "Audience": "ashare-clients",
    "ExpirationMinutes": 60,
    "RefreshExpirationDays": 30
  },
  "Nafath": {
    "ApiUrl": "https://nafath.api.url",
    "ClientId": "your-nafath-client-id",
    "ClientSecret": "your-nafath-client-secret",
    "CallbackUrl": "https://your-api.com/api/auth/nafath/callback"
  },
  "Firebase": {
    "ProjectId": "your-firebase-project-id",
    "ServerKey": "your-firebase-server-key"
  },
  "Storage": {
    "Type": "Local",
    "BasePath": "uploads"
  }
}
