{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ashare.db"
  },
  "Jwt": {
    "Issuer": "https://ashare.app",
    "Audience": "ashare-api",
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32Characters!"
  },
  "Authentication": {
    "TwoFactor": {
      "Nafath": {
        "BaseUrl": "https://api.authentica.sa/api/v2/",
        "ApiKey": "YOUR_NAFATH_API_KEY",
        "WebhookSecret": "YOUR_WEBHOOK_SECRET",
        "Mode": "Test",
        "TestNationalId": "2507643761",
        "SessionExpirationMinutes": 5
      }
    }
  },
  "ServiceRegistry": {
    "Url": "https://localhost:5001",
    "ServiceName": "Ashare"
  },
  "Messaging": {
    "HubUrl": "https://localhost:5001/hubs/messaging"
  },
  "Notifications": {
    "Enabled": true,
    "VerboseLogging": true
  },
  "InAppNotifications": {
    "MethodName": "ReceiveNotification"
  },
  "Payments": {
    "Noon": {
      "ApplicationIdentifier": "YOUR_APP_ID",
      "BusinessIdentifier": "YOUR_BUSINESS_ID",
      "AuthorizationKey": "YOUR_AUTH_KEY",
      "ApiKey": "YOUR_API_KEY",
      "UseSandbox": true,
      "DefaultCurrency": "SAR",
      "ReturnUrl": "https://localhost:5001/api/payments/callback"
    }
  }
}
