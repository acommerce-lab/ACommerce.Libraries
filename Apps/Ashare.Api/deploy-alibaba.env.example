# Alibaba Cloud Deployment Configuration
# Copy this file to deploy-alibaba.env and update the values
# Usage: source deploy-alibaba.env && ./deploy-alibaba.sh

# ECS Instance Configuration
export ECS_HOST="<your-ecs-public-ip>"          # Required: ECS public IP or hostname
export ECS_USER="root"                           # SSH user (default: root)
export SSH_KEY="~/.ssh/id_rsa"                   # Path to SSH private key

# Alibaba Container Registry (ACR) Configuration
export ACR_REGISTRY="registry.me-central-1.aliyuncs.com"  # ACR registry URL for Saudi Arabia
export ACR_NAMESPACE="ashare"                             # Your ACR namespace
export ACR_USERNAME="<your-acr-username>"                 # ACR username
export ACR_PASSWORD="<your-acr-password>"                 # ACR password

# Image Configuration
export IMAGE_NAME="ashare-api"
export IMAGE_TAG="latest"

# Container Configuration
export CONTAINER_NAME="ashare-api"
export CONTAINER_PORT="8080"
export HOST_PORT="80"

# Optional: Application Environment Variables
# These will be passed to the container
# export APP_ENV_ConnectionStrings__DefaultConnection="<your-db-connection>"
# export APP_ENV_JWT__SecretKey="<your-jwt-secret>"
