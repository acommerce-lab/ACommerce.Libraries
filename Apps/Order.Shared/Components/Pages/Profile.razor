                    <div class="menu-content">
                        <span class="menu-title">الإعدادات</span>
                        <span class="menu-subtitle">اللغة والمظهر والإشعارات</span>
                    </div>
                    <svg class="menu-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Support Section -->
        <div class="menu-section">
            <h3 class="section-title">الدعم</h3>
            <div class="menu-card">
                <button class="menu-item" @onclick='() => Navigate("/chats")'>
                    <div class="menu-icon support">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                        </svg>
                    </div>
                    <div class="menu-content">
                        <span class="menu-title">محادثات الطلبات</span>
                        <span class="menu-subtitle">تواصل مع المتاجر</span>
                    </div>
                    <svg class="menu-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                </button>

                <button class="menu-item" @onclick='() => Navigate("/tickets")'>
                    <div class="menu-icon tickets">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
