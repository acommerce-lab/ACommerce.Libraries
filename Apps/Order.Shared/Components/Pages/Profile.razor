        <!-- Footer -->
        <div class="footer">
            <p>صنع في المملكة العربية السعودية</p>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
@if (ShowingEditModal)
{
    <div class="modal-overlay" @onclick="HideEditModal">
        <div class="edit-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2>تعديل الملف الشخصي</h2>
                <button class="close-btn" @onclick="HideEditModal">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"/>
                        <line x1="6" y1="6" x2="18" y2="18"/>
                    </svg>
                </button>
            </div>

            <div class="modal-content">
                <!-- Avatar Edit -->
                <div class="avatar-edit-section">
                    <div class="edit-avatar">
                        @if (!string.IsNullOrEmpty(User?.AvatarUrl))
                        {
                            <img src="@User.AvatarUrl" alt="" />
                        }
                        else
                        {
                            <span class="avatar-text large">@GetInitials()</span>
                        }
                    </div>
                    <button class="change-avatar-btn">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
                            <circle cx="12" cy="13" r="4"/>
                        </svg>
                        تغيير الصورة
                    </button>
                </div>

                <!-- Form Fields -->
                <div class="form-fields">
                    <div class="form-group">
                        <label>الاسم الأول</label>
                        <input type="text" @bind="EditFirstName" placeholder="أدخل اسمك الأول" />
                    </div>

                    <div class="form-group">
                        <label>اسم العائلة</label>
                        <input type="text" @bind="EditLastName" placeholder="أدخل اسم العائلة" />
                    </div>

                    <div class="form-group">
                        <label>البريد الإلكتروني <span class="optional">(اختياري)</span></label>
                        <input type="email" @bind="EditEmail" placeholder="example@email.com" class="ltr" />
                    </div>

                    <div class="form-group">
                        <label>رقم الهاتف</label>
                        <input type="tel" value="@User?.PhoneNumber" disabled class="ltr disabled" />
                        <span class="field-hint">لتغيير رقم الهاتف، تواصل مع الدعم</span>
                    </div>
                </div>
            </div>

            <div class="modal-actions">
                <button class="btn-cancel" @onclick="HideEditModal">إلغاء</button>
                <button class="btn-save" @onclick="SaveProfile" disabled="@IsSaving">
                    @if (IsSaving)
                    {
                        <div class="btn-loader"></div>
                        <span>جاري الحفظ...</span>
                    }
                    else
                    {
                        <span>حفظ التغييرات</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private UserProfileDto? User;
    private bool IsLoading = true;
    private bool NotificationsEnabled = true;
    private bool ShowingEditModal = false;
    private bool IsSaving = false;

    // Edit form fields
    private string? EditFirstName;
    private string? EditLastName;
    private string? EditEmail;

    protected override async Task OnInitializedAsync()
    {
        await LoadUser();
    }

    private async Task LoadUser()
    {
        IsLoading = true;
        try
        {
            User = await ApiService.GetCurrentUserAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user: {ex.Message}");
            // Create mock user for demo
            User = new UserProfileDto
            {
                PhoneNumber = "+966 5XXXXXXXX"
            };
        }
        finally
        {
            IsLoading = false;
        }
    }

    private string GetInitials()
    {
        var name = User?.FullName ?? "";
        if (string.IsNullOrWhiteSpace(name))
        {
            return User?.PhoneNumber?.Length > 3 ? User.PhoneNumber[^2..] : "؟";
        }
        var parts = name.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
        {
            return $"{parts[0][0]}{parts[1][0]}";
        }
        return name.Length > 0 ? name[0].ToString() : "؟";
    }

    private void ShowEditModal()
    {
        EditFirstName = User?.FirstName;
        EditLastName = User?.LastName;
        EditEmail = User?.Email;
        ShowingEditModal = true;
    }

    private void HideEditModal()
    {
        ShowingEditModal = false;
    }

    private async Task SaveProfile()
    {
        IsSaving = true;
        try
        {
            // TODO: Call API to update profile
            await Task.Delay(1000);

            // Update local user object
            if (User != null)
            {
                User.FirstName = EditFirstName;
                User.LastName = EditLastName;
                User.Email = EditEmail;
            }

            ShowingEditModal = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving profile: {ex.Message}");
        }
        finally
        {
            IsSaving = false;
        }
    }

    private void Navigate(string url)
    {
        Navigation.NavigateTo(url);
    }

    private void ManagePayments()
    {
        // TODO: Navigate to payments page
    }

    private void OpenFAQ()
    {
        Navigation.NavigateTo("/help");
    }

    private void OpenAbout()
    {
        Navigation.NavigateTo("/settings");
    }

    private async Task Logout()
    {
        await AuthState.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}

<style>
    .profile-page {
        min-height: 100vh;
        background: #F3F4F6;
        padding-bottom: 100px;
    }

    /* Header */
    .profile-header {
        position: relative;
        padding-bottom: 60px;
    }

    .header-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 180px;
        background: linear-gradient(135deg, #F97316, #EA580C);
    }

    .header-content {
        position: relative;
        padding: 24px 20px 0;
    }

    .header-content h1 {
        font-size: 24px;
        font-weight: 700;
        color: white;
        margin: 0;
    }

    /* Profile Card */
    .profile-card {
        position: relative;
        display: flex;
        align-items: center;
        gap: 16px;
        background: white;
        border-radius: 20px;
        padding: 20px;
        margin: 24px 16px 0;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .avatar {
        width: 64px;
        height: 64px;
        background: linear-gradient(135deg, #FED7AA, #FDBA74);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

    .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .avatar-text {
        font-size: 22px;
        font-weight: 700;
        color: #EA580C;
    }

    .avatar-edit-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
