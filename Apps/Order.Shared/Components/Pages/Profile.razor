@page "/profile"
@inject OrderApiService ApiService
@inject AuthStateService AuthState
@inject AppSettingsService SettingsService
@inject NavigationManager Navigation

<div class="profile-page">
    <!-- Header with gradient -->
    <div class="profile-header">
        <div class="header-bg"></div>
        <div class="header-content">
            <h1>حسابي</h1>
        </div>

        <!-- Profile Card -->
        <div class="profile-card">
            @if (IsLoading)
            {
                <div class="avatar skeleton-avatar"></div>
                <div class="user-info">
                    <div class="skeleton skeleton-name"></div>
                    <div class="skeleton skeleton-phone"></div>
                </div>
            }
            else
            {
                <div class="avatar" @onclick="ShowEditModal">
                    @if (!string.IsNullOrEmpty(User?.AvatarUrl))
                    {
                        <img src="@User.AvatarUrl" alt="@User.FullName" />
                    }
                    else
                    {
                        <span class="avatar-text">@GetInitials()</span>
                    }
                    <div class="avatar-edit-overlay">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/>
                            <circle cx="12" cy="13" r="4"/>
                        </svg>
                    </div>
                </div>
                <div class="user-info">
                    <h2>@(string.IsNullOrEmpty(User?.FullName?.Trim()) ? "مستخدم جديد" : User.FullName)</h2>
                    <p class="phone-number">@User?.PhoneNumber</p>
                </div>
                <button class="edit-profile-btn" @onclick="ShowEditModal">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                    </svg>
                </button>
            }
        </div>
    </div>

    <!-- Menu Sections -->
    <div class="menu-container">
        <!-- Account Section -->
        <div class="menu-section">
            <h3 class="section-title">الحساب</h3>
            <div class="menu-card">
                <button class="menu-item" @onclick="() => Navigate('/orders')">
                    <div class="menu-icon orders">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
