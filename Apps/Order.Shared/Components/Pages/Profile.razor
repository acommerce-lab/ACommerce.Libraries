        margin: 0;
        direction: ltr;
        text-align: right;
    }

    .edit-profile-btn {
        width: 44px;
        height: 44px;
        background: #F3F4F6;
        border: none;
        border-radius: 12px;
        color: #6B7280;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
