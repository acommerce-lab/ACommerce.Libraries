@page "/orders"
@inject OrderApiService ApiService
@inject NavigationManager Navigation

<div class="orders-page">
    <!-- Header -->
    <header class="page-header">
        <div class="header-content">
            <h1>طلباتي</h1>
            <p class="header-subtitle">تتبع جميع طلباتك</p>
        </div>
    </header>

    <div class="page-content">
        @if (IsLoading && Orders == null)
        {
            <!-- Skeleton Loading -->
            <div class="orders-list">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="order-card skeleton-card">
                        <div class="skeleton-header">
                            <div class="skeleton skeleton-number"></div>
                            <div class="skeleton skeleton-status"></div>
                        </div>
                        <div class="skeleton-body">
                            <div class="skeleton skeleton-vendor"></div>
                            <div class="skeleton skeleton-date"></div>
                        </div>
                        <div class="skeleton-footer">
                            <div class="skeleton skeleton-info"></div>
                            <div class="skeleton skeleton-price"></div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (Orders?.Items?.Any() == true)
        {
            <!-- Filter Tabs -->
            <div class="filter-tabs">
                <button class="filter-tab @(ActiveFilter == "all" ? "active" : "")"
                        @onclick="() => SetFilter('all')">
                    الكل
                    <span class="tab-count">@Orders.Total</span>
                </button>
                <button class="filter-tab @(ActiveFilter == "active" ? "active" : "")"
                        @onclick="() => SetFilter('active')">
                    نشط
                </button>
                <button class="filter-tab @(ActiveFilter == "completed" ? "active" : "")"
                        @onclick="() => SetFilter('completed')">
                    مكتمل
                </button>
            </div>

            <!-- Orders List -->
            <div class="orders-list">
                @foreach (var order in FilteredOrders)
                {
                    <div class="order-card" @onclick="() => ViewOrder(order.Id)">
                        <!-- Order Header -->
                        <div class="order-header">
                            <div class="order-id">
                                <span class="order-number">#@order.OrderNumber</span>
                                <span class="order-date">@order.CreatedAt.ToString("dd MMM")</span>
                            </div>
                            <div class="status-badge @GetStatusClass(order.Status)">
                                <span class="status-dot"></span>
                                <span>@order.StatusAr</span>
                            </div>
                        </div>

                        <!-- Vendor Info -->
                        @if (order.Vendor != null)
                        {
                            <div class="vendor-section">
                                <div class="vendor-avatar">
                                    @if (!string.IsNullOrEmpty(order.Vendor.LogoUrl))
                                    {
                                        <img src="@order.Vendor.LogoUrl" alt="@order.Vendor.Name" />
                                    }
                                    else
                                    {
                                        <div class="avatar-placeholder">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                                                <polyline points="9 22 9 12 15 12 15 22"/>
                                            </svg>
                                        </div>
                                    }
                                </div>
                                <div class="vendor-info">
                                    <span class="vendor-name">@order.Vendor.Name</span>
                                    <span class="order-time">@order.CreatedAt.ToString("hh:mm tt")</span>
                                </div>
                            </div>
                        }

                        <!-- Order Details -->
                        <div class="order-details">
                            <div class="detail-chips">
                                <div class="detail-chip">
                                    @if (order.DeliveryType == DeliveryType.Pickup)
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                            <circle cx="12" cy="7" r="4"/>
                                        </svg>
                                        <span>كاشير</span>
                                    }
                                    else
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0-4 0"/>
                                            <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0-4 0"/>
                                            <path d="M5 17H3V6a1 1 0 0 1 1-1h9v12m-4 0h6m4 0h2v-6h-8m0-5h5l3 5"/>
                                        </svg>
                                        <span>سيارة</span>
                                    }
                                </div>
                                <div class="detail-chip">
                                    @if (order.PaymentMethod == PaymentMethod.Cash)
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                                            <circle cx="12" cy="12" r="3"/>
                                        </svg>
                                        <span>نقدي</span>
                                    }
                                    else
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                                            <line x1="1" y1="10" x2="23" y2="10"/>
                                        </svg>
                                        <span>بطاقة</span>
                                    }
                                </div>
                            </div>
                            <div class="order-total">
                                <span class="total-amount">@order.TotalAmount.ToString("N0")</span>
                                <span class="currency">ر.س</span>
                            </div>
                        </div>

                        <!-- Arrow Indicator -->
                        <div class="card-arrow">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="9 18 15 12 9 6"/>
                            </svg>
                        </div>
                    </div>
                }
            </div>

            @if (Orders.Total > Orders.Items.Count)
            {
                <button class="load-more-btn" @onclick="LoadMore" disabled="@IsLoadingMore">
                    @if (IsLoadingMore)
                    {
                        <div class="btn-loader"></div>
                        <span>جاري التحميل...</span>
                    }
                    else
                    {
                        <span>تحميل المزيد</span>
                        <span class="more-count">(@(Orders.Total - Orders.Items.Count) طلب)</span>
                    }
                </button>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"/>
                        <rect x="9" y="3" width="6" height="4" rx="1"/>
                        <path d="M9 12h6"/>
                        <path d="M9 16h6"/>
                    </svg>
                </div>
                <h2>لا توجد طلبات بعد</h2>
                <p>ابدأ بتصفح العروض واطلب الآن!</p>
                <button class="browse-btn" @onclick="GoHome">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                        <line x1="3" y1="6" x2="21" y2="6"/>
                        <path d="M16 10a4 4 0 0 1-8 0"/>
                    </svg>
                    تصفح العروض
                </button>
            </div>
        }
    </div>
</div>

@code {
    private OrdersResponse? Orders;
    private bool IsLoading = true;
    private bool IsLoadingMore = false;
    private int CurrentPage = 1;
    private string ActiveFilter = "all";

    private IEnumerable<OrderDto> FilteredOrders => ActiveFilter switch
    {
        "active" => Orders?.Items?.Where(o => IsActiveStatus(o.Status)) ?? Enumerable.Empty<OrderDto>(),
        "completed" => Orders?.Items?.Where(o => !IsActiveStatus(o.Status)) ?? Enumerable.Empty<OrderDto>(),
        _ => Orders?.Items ?? Enumerable.Empty<OrderDto>()
    };

    private bool IsActiveStatus(string? status) => status is "pending" or "accepted" or "preparing" or "ready";

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        IsLoading = true;
        try
        {
            Orders = await ApiService.GetMyOrdersAsync(CurrentPage);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadMore()
    {
        IsLoadingMore = true;
        CurrentPage++;
        try
        {
            var moreOrders = await ApiService.GetMyOrdersAsync(CurrentPage);
            if (moreOrders?.Items != null && Orders?.Items != null)
            {
                Orders.Items.AddRange(moreOrders.Items);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading more orders: {ex.Message}");
        }
        finally
        {
            IsLoadingMore = false;
        }
    }

    private void SetFilter(string filter)
    {
        ActiveFilter = filter;
    }

    private void ViewOrder(Guid orderId)
    {
        Navigation.NavigateTo($"/orders/{orderId}");
    }

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private string GetStatusClass(string? status) => status switch
    {
        "pending" => "status-pending",
        "accepted" => "status-accepted",
        "preparing" => "status-preparing",
        "ready" => "status-ready",
        "delivered" => "status-delivered",
        "cancelled" => "status-cancelled",
        _ => ""
    };
}

<style>
    .orders-page {
        min-height: 100vh;
        background: #F3F4F6;
    }

    /* Header */
    .page-header {
        background: linear-gradient(135deg, #F97316, #EA580C);
        padding: 24px 20px 32px;
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .header-content h1 {
        font-size: 24px;
        font-weight: 700;
        color: white;
        margin: 0 0 4px;
    }

    .header-subtitle {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.85);
        margin: 0;
    }

    .page-content {
        margin-top: -16px;
        padding: 0 16px 100px;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 8px;
        background: white;
        padding: 8px;
        border-radius: 16px;
        margin-bottom: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .filter-tab {
        flex: 1;
        padding: 12px 16px;
        border: none;
        background: transparent;
        border-radius: 12px;
        font-size: 14px;
        font-weight: 600;
        color: #6B7280;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        transition: all 0.2s;
    }

    .filter-tab.active {
        background: linear-gradient(135deg, #F97316, #EA580C);
        color: white;
    }

    .tab-count {
        background: rgba(0, 0, 0, 0.1);
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 12px;
    }

    .filter-tab.active .tab-count {
        background: rgba(255, 255, 255, 0.2);
    }

    /* Orders List */
    .orders-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    /* Order Card */
    .order-card {
        background: white;
        border-radius: 18px;
        padding: 16px;
        cursor: pointer;
        transition: all 0.25s;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        position: relative;
    }

    .order-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 12px;
    }

    .order-id {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .order-number {
        font-size: 16px;
        font-weight: 700;
        color: #1F2937;
    }

    .order-date {
        font-size: 13px;
        color: #9CA3AF;
    }

    /* Status Badge */
    .status-badge {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: currentColor;
    }

    .status-pending {
        background: #FFF7ED;
        color: #EA580C;
    }

    .status-accepted,
    .status-preparing {
        background: #EFF6FF;
        color: #2563EB;
    }

    .status-ready {
        background: #F0FDF4;
        color: #16A34A;
    }

    .status-delivered {
        background: #FAF5FF;
        color: #9333EA;
    }

    .status-cancelled {
        background: #FEF2F2;
        color: #DC2626;
    }

    /* Vendor Section */
    .vendor-section {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 0;
        border-bottom: 1px solid #F3F4F6;
    }

    .vendor-avatar {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        overflow: hidden;
        background: #F3F4F6;
    }

    .vendor-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .avatar-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #9CA3AF;
    }

    .vendor-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .vendor-name {
        font-size: 15px;
        font-weight: 600;
        color: #1F2937;
    }

    .order-time {
        font-size: 13px;
        color: #9CA3AF;
    }

    /* Order Details */
    .order-details {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 12px;
    }

    .detail-chips {
        display: flex;
        gap: 8px;
    }

    .detail-chip {
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 6px 10px;
        background: #F3F4F6;
        border-radius: 8px;
        font-size: 12px;
        color: #6B7280;
    }

    .detail-chip svg {
        width: 14px;
        height: 14px;
    }

    .order-total {
        display: flex;
        align-items: baseline;
        gap: 4px;
    }

    .total-amount {
        font-size: 20px;
        font-weight: 700;
        color: #F97316;
    }

    .currency {
        font-size: 14px;
        font-weight: 600;
        color: #F97316;
    }

    .card-arrow {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: #D1D5DB;
    }

    /* Load More */
    .load-more-btn {
        width: 100%;
        padding: 16px;
        margin-top: 16px;
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 14px;
        font-size: 15px;
        font-weight: 600;
        color: #374151;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .load-more-btn:hover:not(:disabled) {
        border-color: #F97316;
        color: #F97316;
    }

    .load-more-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .more-count {
        color: #9CA3AF;
        font-weight: 400;
    }

    .btn-loader {
        width: 18px;
        height: 18px;
        border: 2px solid #E5E7EB;
        border-top-color: #F97316;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 20px;
        margin-top: 20px;
    }

    .empty-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #FFF7ED, #FFEDD5);
        border-radius: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        color: #F97316;
    }

    .empty-state h2 {
        font-size: 20px;
        font-weight: 700;
        color: #1F2937;
        margin: 0 0 8px;
    }

    .empty-state p {
        font-size: 15px;
        color: #6B7280;
        margin: 0 0 24px;
    }

    .browse-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        background: linear-gradient(135deg, #F97316, #EA580C);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 8px 24px rgba(249, 115, 22, 0.35);
    }

    .browse-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(249, 115, 22, 0.4);
    }

    /* Skeleton Loading */
    .skeleton-card {
        pointer-events: none;
    }

    .skeleton {
        background: linear-gradient(90deg, #F3F4F6 25%, #E5E7EB 50%, #F3F4F6 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 8px;
    }

    .skeleton-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 16px;
    }

    .skeleton-number {
        width: 80px;
        height: 20px;
    }

    .skeleton-status {
        width: 60px;
        height: 24px;
        border-radius: 12px;
    }

    .skeleton-body {
        margin-bottom: 16px;
    }

    .skeleton-vendor {
        width: 120px;
        height: 16px;
        margin-bottom: 8px;
    }

    .skeleton-date {
        width: 80px;
        height: 14px;
    }

    .skeleton-footer {
        display: flex;
        justify-content: space-between;
        padding-top: 12px;
        border-top: 1px solid #F3F4F6;
    }

    .skeleton-info {
        width: 100px;
        height: 16px;
    }

    .skeleton-price {
        width: 60px;
        height: 20px;
    }

    @@keyframes shimmer {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>
