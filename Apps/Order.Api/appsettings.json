{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=order.db"
  },
  "JWT": {
    "SecretKey": "OrderApp_SuperSecretKey_2024_ChangeInProduction_AtLeast32Chars!",
    "Issuer": "OrderApi",
    "Audience": "OrderApp",
    "AccessTokenLifetime": "7.00:00:00"
  },
  "HostSettings": {
    "BaseUrl": "http://localhost:5100",
    "WebBaseUrl": "http://localhost:5100"
  },
  "Files": {
    "Storage": {
      "Provider": "Local",
      "Local": {
        "BasePath": "./uploads",
        "BaseUrl": "http://localhost:5100/files"
      }
    }
  },
  "TwoFactor": {
    "SMS": {
      "Enabled": true,
      "MockMode": true,
      "CodeLength": 4,
      "ExpirationMinutes": 5,
      "MaxAttempts": 3
    }
  },
  "Notifications": {
    "InApp": {
      "Enabled": true
    }
  },
  "OrderSettings": {
    "DefaultCurrency": "SAR",
    "AllowCashPayment": true,
    "AllowCardPayment": true,
    "AllowCarDelivery": true,
    "AllowPickup": true,
    "LocationShareEnabled": true
  }
}
