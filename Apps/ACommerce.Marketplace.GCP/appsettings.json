{
  "_comment": "ACommerce Marketplace API - GCP Edition Configuration",
  "_note": "All production values should be provided via environment variables, not this file",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "JWT": {
    "Issuer": "https://marketplace.acommerce.io",
    "Audience": "acommerce-marketplace",
    "SecretKey": "OVERRIDE_VIA_JWT__SecretKey_ENV_VAR_MIN_32_CHARS",
    "ExpirationMinutes": 60,
    "RefreshExpirationDays": 7
  },

  "Redis": {
    "ConnectionString": "localhost:6379",
    "TwoFactorSessionStore": {
      "KeyPrefix": "acommerce:2fa:session:",
      "DefaultExpirationMinutes": 10
    }
  },

  "Files": {
    "Storage": {
      "GoogleCloud": {
        "BucketName": "acommerce-files",
        "UseDirectoryStructure": true,
        "DirectoryFormat": "yyyy/MM/dd"
      }
    }
  }
}
