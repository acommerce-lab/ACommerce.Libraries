@page "/login"
@using Restaurant.Shared.Services
@using Restaurant.Core.DTOs.Auth
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="login-page">
    <div class="login-container">
        <div class="login-header">
            <div class="login-logo">
                @if (AppType == "Customer")
                {
                    <i class="bi bi-basket3-fill"></i>
                }
                else if (AppType == "Vendor")
                {
                    <i class="bi bi-shop"></i>
                }
                else
                {
                    <i class="bi bi-bicycle"></i>
                }
            </div>
            <h1 class="login-title">@GetTitle()</h1>
            <p class="login-subtitle">@GetSubtitle()</p>
        </div>

        @if (CurrentStep == LoginStep.Phone)
        {
            <div class="login-form">
                <div class="form-group">
                    <label>رقم الجوال</label>
                    <div class="phone-input">
                        <span class="country-code">+966</span>
                        <input type="tel"
                               @bind="PhoneNumber"
                               placeholder="5XXXXXXXX"
                               maxlength="9"
                               disabled="@IsLoading" />
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="error-message">
                        <i class="bi bi-exclamation-circle"></i>
                        @ErrorMessage
                    </div>
                }

                <button class="btn btn-primary btn-block"
                        @onclick="SendOtp"
                        disabled="@(IsLoading || PhoneNumber?.Length < 9)">
                    @if (IsLoading)
                    {
                        <span class="spinner"></span>
                        <span>جاري الإرسال...</span>
                    }
                    else
                    {
                        <span>إرسال رمز التحقق</span>
                    }
                </button>
            </div>
        }
        else if (CurrentStep == LoginStep.Otp)
        {
            <div class="login-form">
                <p class="otp-info">
                    تم إرسال رمز التحقق إلى <strong dir="ltr">+966 @PhoneNumber</strong>
                </p>

                <div class="otp-input-container">
                    @for (int i = 0; i < 6; i++)
                    {
                        var index = i;
                        <input type="text"
                               maxlength="1"
                               class="otp-input"
                               @bind="OtpDigits[index]"
                               @oninput="@(e => OnOtpInput(index, e))"
                               disabled="@IsLoading" />
                    }
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="error-message">
                        <i class="bi bi-exclamation-circle"></i>
                        @ErrorMessage
                    </div>
                }

                <button class="btn btn-primary btn-block"
                        @onclick="VerifyOtp"
                        disabled="@(IsLoading || OtpCode.Length < 6)">
                    @if (IsLoading)
                    {
                        <span class="spinner"></span>
                        <span>جاري التحقق...</span>
                    }
                    else
                    {
                        <span>تأكيد</span>
                    }
                </button>

                <div class="resend-section">
                    @if (ResendCountdown > 0)
                    {
                        <span>إعادة الإرسال بعد @ResendCountdown ثانية</span>
                    }
                    else
                    {
                        <button class="btn-link" @onclick="ResendOtp" disabled="@IsLoading">
                            إعادة إرسال الرمز
                        </button>
                    }
                </div>

                <button class="btn-link" @onclick="GoBack">
                    <i class="bi bi-arrow-right"></i>
                    تغيير رقم الجوال
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string AppType { get; set; } = "Customer";
    [Parameter] public string? RedirectUrl { get; set; } = "/";

    private LoginStep CurrentStep = LoginStep.Phone;
    private string PhoneNumber = "";
    private string[] OtpDigits = new string[6];
    private string OtpCode => string.Join("", OtpDigits);
    private string? TransactionId;
    private string? ErrorMessage;
    private bool IsLoading;
    private int ResendCountdown;
    private System.Timers.Timer? _countdownTimer;

    private enum LoginStep { Phone, Otp }

    protected override void OnInitialized()
    {
        if (AuthService.IsAuthenticated)
        {
            Navigation.NavigateTo(RedirectUrl ?? "/");
        }
    }

    private string GetTitle() => AppType switch
    {
        "Customer" => "تسجيل الدخول",
        "Vendor" => "دخول المطعم",
        "Driver" => "دخول السائق",
        _ => "تسجيل الدخول"
    };

    private string GetSubtitle() => AppType switch
    {
        "Customer" => "أدخل رقم جوالك للمتابعة",
        "Vendor" => "أدخل رقم جوالك المسجل",
        "Driver" => "أدخل رقم جوالك المسجل لدى المطعم",
        _ => "أدخل رقم جوالك للمتابعة"
    };

    private async Task SendOtp()
    {
        if (string.IsNullOrWhiteSpace(PhoneNumber) || PhoneNumber.Length < 9)
        {
            ErrorMessage = "يرجى إدخال رقم جوال صحيح";
            return;
        }

        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var result = await AuthService.SendOtpAsync(PhoneNumber);

            if (result?.Success == true)
            {
                TransactionId = result.TransactionId;
                CurrentStep = LoginStep.Otp;
                StartCountdown();
            }
            else
            {
                ErrorMessage = result?.Message ?? "فشل إرسال رمز التحقق";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "حدث خطأ، يرجى المحاولة لاحقاً";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task VerifyOtp()
    {
        if (string.IsNullOrEmpty(TransactionId) || OtpCode.Length < 6)
        {
            ErrorMessage = "يرجى إدخال رمز التحقق كاملاً";
            return;
        }

        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var result = await AuthService.VerifyOtpAsync(TransactionId, OtpCode);

            if (result?.Success == true)
            {
                Navigation.NavigateTo(RedirectUrl ?? "/");
            }
            else
            {
                ErrorMessage = result?.Error ?? "رمز التحقق غير صحيح";
                // مسح الرمز المدخل
                OtpDigits = new string[6];
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "حدث خطأ، يرجى المحاولة لاحقاً";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task ResendOtp()
    {
        await SendOtp();
    }

    private void GoBack()
    {
        CurrentStep = LoginStep.Phone;
        OtpDigits = new string[6];
        TransactionId = null;
        ErrorMessage = null;
        _countdownTimer?.Stop();
    }

    private void OnOtpInput(int index, ChangeEventArgs e)
    {
        var value = e.Value?.ToString() ?? "";
        if (value.Length > 0 && char.IsDigit(value[0]))
        {
            OtpDigits[index] = value[0].ToString();
            // الانتقال للحقل التالي (يحتاج JavaScript في التطبيق الفعلي)
        }
        StateHasChanged();
    }

    private void StartCountdown()
    {
        ResendCountdown = 60;
        _countdownTimer?.Stop();
        _countdownTimer = new System.Timers.Timer(1000);
        _countdownTimer.Elapsed += (s, e) =>
        {
            ResendCountdown--;
            if (ResendCountdown <= 0)
            {
                _countdownTimer.Stop();
            }
            InvokeAsync(StateHasChanged);
        };
        _countdownTimer.Start();
    }

    public void Dispose()
    {
        _countdownTimer?.Stop();
        _countdownTimer?.Dispose();
    }
}

<style>
    .login-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: var(--background, #F0FDF4);
    }

    .login-container {
        width: 100%;
        max-width: 400px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .login-logo {
        font-size: 4rem;
        color: var(--primary, #22C55E);
        margin-bottom: 1rem;
    }

    .login-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 0.5rem;
        color: var(--text, #1F2937);
    }

    .login-subtitle {
        color: var(--text-secondary, #6B7280);
        margin: 0;
    }

    .login-form {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text, #1F2937);
    }

    .phone-input {
        display: flex;
        border: 2px solid var(--border, #E5E7EB);
        border-radius: 0.75rem;
        overflow: hidden;
        direction: ltr;
    }

    .phone-input:focus-within {
        border-color: var(--primary, #22C55E);
    }

    .country-code {
        padding: 0.875rem 1rem;
        background: #F3F4F6;
        color: var(--text-secondary, #6B7280);
        font-weight: 500;
    }

    .phone-input input {
        flex: 1;
        border: none;
        padding: 0.875rem;
        font-size: 1.1rem;
        outline: none;
    }

    .otp-info {
        text-align: center;
        color: var(--text-secondary, #6B7280);
        margin-bottom: 1.5rem;
    }

    .otp-input-container {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 1.5rem;
        direction: ltr;
    }

    .otp-input {
        width: 48px;
        height: 56px;
        text-align: center;
        font-size: 1.5rem;
        font-weight: 600;
        border: 2px solid var(--border, #E5E7EB);
        border-radius: 0.75rem;
        outline: none;
    }

    .otp-input:focus {
        border-color: var(--primary, #22C55E);
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        border: none;
        border-radius: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: var(--primary, #22C55E);
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        background: var(--primary-dark, #16A34A);
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-block {
        width: 100%;
    }

    .btn-link {
        background: none;
        border: none;
        color: var(--primary, #22C55E);
        font-weight: 500;
        cursor: pointer;
        padding: 0.5rem;
    }

    .error-message {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: #FEE2E2;
        color: #DC2626;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .resend-section {
        text-align: center;
        margin: 1rem 0;
        color: var(--text-secondary, #6B7280);
        font-size: 0.9rem;
    }

    .spinner {
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>
