@page "/profile"
@using ACommerce.Client.Auth
@using ACommerce.Client.Profiles
@inject AshareApiService ApiService
@inject AuthClient AuthClient
@inject ProfilesClient ProfilesClient
@inject IAppNavigationService Navigation
@inject Ashare.Shared.Services.ThemeService ThemeService
@inject ILocalizationService L

<div class="ac-page ashare-profile-page @(ThemeService.IsDarkMode ? "ac-dark" : "")" dir="@(L.IsRtl ? "rtl" : "ltr")">

    @if (_isLoading)
    {
        <div class="ashare-loading">
            <div class="ac-spinner"></div>
            <span>@L["Loading"]</span>
        </div>
    }
    else if (!_isLoggedIn)
    {
        @* Not Logged In - Show Login Prompt *@
        <div class="ashare-login-prompt">
            <div class="ashare-login-prompt-icon">
                <i class="bi bi-person-circle"></i>
            </div>
            <h2>@L["WelcomeToAshare"]</h2>
            <p>@L["LoginToAccessProfile"]</p>
            <button class="ac-btn ac-btn-primary ac-btn-lg" @onclick='() => Navigation.NavigateTo("/login")'>
                <i class="bi bi-box-arrow-in-right"></i>
                @L["Login"]
            </button>
            <button class="ac-btn ac-btn-secondary ac-btn-lg" @onclick='() => Navigation.NavigateTo("/register")'>
                @L["CreateAccount"]
            </button>
        </div>
    }
    else
    {
        @* Profile Header *@
        <div class="ashare-profile-header">
            <div class="ashare-profile-avatar">
                @if (!string.IsNullOrEmpty(_avatarUrl))
                {
                    <img src="@_avatarUrl" alt="@_userName" />
                }
                else
                {
                    <i class="bi bi-person-circle"></i>
                }
                <button class="ashare-edit-avatar" @onclick='() => Navigation.NavigateTo("/profile/edit")'>
                    <i class="bi bi-camera"></i>
                </button>
            </div>
            <h1 class="ashare-profile-name">@_userName</h1>
            @if (!string.IsNullOrEmpty(_phoneNumber))
            {
                <p class="ashare-profile-phone">@_phoneNumber</p>
            }
            <div class="ashare-profile-stats">
                <div class="ashare-stat-item">
                    <span class="ashare-stat-value">@_bookingsCount</span>
                    <span class="ashare-stat-label">@L["Bookings"]</span>
                </div>
                <div class="ashare-stat-item">
                    <span class="ashare-stat-value">@_favoritesCount</span>
                    <span class="ashare-stat-label">@L["Favorites"]</span>
                </div>
                <div class="ashare-stat-item">
                    <span class="ashare-stat-value">@_reviewsCount</span>
                    <span class="ashare-stat-label">@L["Reviews"]</span>
                </div>
            </div>
        </div>

        @* Menu Sections *@
        <div class="ashare-profile-menu">
            @* Account Section *@
            <div class="ashare-menu-section">
                <h3 class="ashare-menu-title">@L["Account"]</h3>
                <div class="ashare-menu-items">
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/profile/edit")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["EditProfile"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/notifications")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-bell"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["Notifications"]</span>
                            @if (_notificationsCount > 0)
                            {
                                <span class="ashare-menu-badge">@_notificationsCount</span>
                            }
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/addresses")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-geo-alt"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["MyAddresses"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/payments")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-credit-card"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["PaymentMethods"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </div>
            </div>

            @* Settings Section *@
            <div class="ashare-menu-section">
                <h3 class="ashare-menu-title">@L["Settings"]</h3>
                <div class="ashare-menu-items">
                    <div class="ashare-menu-item">
                        <div class="ashare-menu-icon">
                            <i class="bi bi-moon"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["DarkMode"]</span>
                        </div>
                        <label class="ashare-toggle">
                            <input type="checkbox" @bind="ThemeService.IsDarkMode" />
                            <span class="ashare-toggle-slider"></span>
                        </label>
                    </div>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/language")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-globe"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["Language"]</span>
                            <span class="ashare-menu-value">@GetCurrentLanguageName()</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/privacy")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["PrivacySecurity"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </div>
            </div>

            @* Host Section *@
            <div class="ashare-menu-section">
                <h3 class="ashare-menu-title">@L["Host"]</h3>
                <div class="ashare-menu-items">
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/host/spaces")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["MySpaces"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/host/add")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["AddNewSpace"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/host/earnings")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-wallet2"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["MyEarnings"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </div>
            </div>

            @* Support Section *@
            <div class="ashare-menu-section">
                <h3 class="ashare-menu-title">@L["Help"]</h3>
                <div class="ashare-menu-items">
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/help")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-question-circle"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["HelpCenter"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/support")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-headset"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["ContactUs"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <button class="ashare-menu-item" @onclick='() => Navigation.NavigateTo("/about")'>
                        <div class="ashare-menu-icon">
                            <i class="bi bi-info-circle"></i>
                        </div>
                        <div class="ashare-menu-content">
                            <span class="ashare-menu-label">@L["AboutAshare"]</span>
                        </div>
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </div>
            </div>

            @* Logout *@
            <div class="ashare-logout-section">
                <button class="ashare-logout-btn" @onclick="Logout">
                    <i class="bi bi-box-arrow-right"></i>
                    @L["Logout"]
                </button>
            </div>

            @* App Version *@
            <div class="ashare-app-version">
                <span>@L["AppName"] v1.0.0</span>
            </div>
        </div>
    }
</div>

@code {
    private bool _isLoading = true;
    private bool _isLoggedIn;
    private string _userName = "";
    private string? _phoneNumber;
    private string? _avatarUrl;
    private int _bookingsCount;
    private int _favoritesCount;
    private int _reviewsCount;
    private int _notificationsCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        _isLoading = true;

        try
        {
            // Check if user is logged in
            _isLoggedIn = AuthClient.HasToken;

            if (_isLoggedIn)
            {
                // Get user info from auth (نفاذ)
                var userInfo = await AuthClient.GetMeAsync();
                if (userInfo != null)
                {
                    _userName = userInfo.FullName ?? L["Guest"];
                    _phoneNumber = userInfo.PhoneNumber;
                    _avatarUrl = userInfo.ProfilePictureUrl;
                }

                // Try to get additional profile data
                try
                {
                    var profile = await ProfilesClient.GetMyProfileAsync();
                    if (profile != null)
                    {
                        _userName = profile.FullName ?? _userName;
                        _phoneNumber = profile.PhoneNumber ?? _phoneNumber;
                        _avatarUrl = profile.Avatar ?? _avatarUrl;
                    }
                }
                catch
                {
                    // Profile data already loaded from auth
                }

                // Get stats
                _bookingsCount = await ApiService.GetBookingsCountAsync();
                _favoritesCount = ApiService.GetFavorites().Count;
                _reviewsCount = 0; // TODO: Get from Reviews API
                _notificationsCount = ApiService.GetNotificationsCount();
            }
        }
        catch
        {
            _isLoggedIn = false;
        }

        _isLoading = false;
    }

    private string GetCurrentLanguageName()
    {
        return L.SupportedLanguages
            .FirstOrDefault(lang => lang.Code == L.CurrentLanguage)?.NativeName ?? "العربية";
    }

    private async Task Logout()
    {
        await AuthClient.LogoutAsync();
        _isLoggedIn = false;
        Navigation.NavigateTo("/login");
    }
}
