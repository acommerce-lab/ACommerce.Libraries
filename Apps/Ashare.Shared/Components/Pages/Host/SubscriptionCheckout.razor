@page "/host/subscribe/{PlanSlug}"
@using ACommerce.Subscriptions.DTOs
@using ACommerce.Subscriptions.Enums
@using Ashare.Shared.Models
@using Ashare.Shared.Services
@using ACommerce.Client.Realtime
@using System.Text.Json
@inject AshareApiService ApiService
@inject IAppNavigationService Navigation
@inject Ashare.Shared.Services.ThemeService ThemeService
@inject ILocalizationService L
@inject IPaymentService PaymentService
@inject NavigationManager NavigationManager
@inject RealtimeClient RealtimeClient
@implements IAsyncDisposable

<div class="ac-page ashare-checkout-page @(ThemeService.IsDarkMode ? "ac-dark" : "")" dir="@(L.IsRtl ? "rtl" : "ltr")">
    @* Header *@
    <div class="ac-navbar">
        <button class="ac-navbar-back" @onclick="() => Navigation.NavigateBack()">
            <i class="bi bi-chevron-@(L.IsRtl ? "right" : "left")"></i>
        </button>
        <h1 class="ac-navbar-title">@L["SubscribeNow"]</h1>
        <div class="ac-navbar-spacer"></div>
    </div>

    <div class="ashare-checkout-content">
        @if (_isLoading)
        {
            <div class="ashare-loading">
                <div class="ac-spinner"></div>
                <span>@L["Loading"]</span>
            </div>
        }
        else if (_selectedPlan == null)
        {
            <div class="ashare-error">
                <i class="bi bi-exclamation-circle"></i>
                <span>@L["PlanNotFound"]</span>
                <button class="ac-btn ac-btn-primary" @onclick='() => Navigation.NavigateTo("/host/plans")'>
                    @L["ViewPlans"]
                </button>
            </div>
        }
        else if (_showPaymentWebView && !string.IsNullOrEmpty(_paymentUrl))
        {
            @* Payment WebView - uses redirect mode for Noon *@
            <div class="ashare-payment-webview">
                <PaymentWebView
                    PaymentUrl="@_paymentUrl"
                    PaymentId="@_paymentId"
                    ReturnUrlPattern="/host/payment/callback"
                    UseRedirect="true"
                    OnPaymentCompleted="HandlePaymentCompleted"
                    OnPaymentCancelled="HandlePaymentCancelled" />
            </div>
        }
        else
        {
            @* Order Summary *@
            <div class="ashare-order-summary">
                <div class="ashare-plan-summary-card">
                    <div class="ashare-plan-icon" style="background-color: @_selectedPlan.Color;">
                        <i class="bi @_selectedPlan.Icon"></i>
                    </div>
                    <div class="ashare-plan-details">
                        <h2>@(L.IsRtl ? _selectedPlan.Name : _selectedPlan.NameEn)</h2>
                        <p>@(L.IsRtl ? _selectedPlan.Description : _selectedPlan.DescriptionEn)</p>
                    </div>
                </div>

                @* Billing Cycle Selection *@
                <div class="ashare-billing-section">
                    <h3>@L["BillingCycle"]</h3>
                    <div class="ashare-billing-options">
                        <label class="ashare-billing-option @(_billingCycle == BillingCycle.Monthly ? "selected" : "")">
                            <input type="radio" name="billing" checked="@(_billingCycle == BillingCycle.Monthly)"
                                   @onchange="() => SetBillingCycle(BillingCycle.Monthly)" />
                            <div class="ashare-option-content">
                                <span class="ashare-option-label">@L["Monthly"]</span>
                                <span class="ashare-option-price">@_selectedPlan.MonthlyPrice.ToString("N0") @_selectedPlan.Currency</span>
                            </div>
                        </label>

                        @if (_selectedPlan.QuarterlyPrice.HasValue)
                        {
                            <label class="ashare-billing-option @(_billingCycle == BillingCycle.Quarterly ? "selected" : "")">
                                <input type="radio" name="billing" checked="@(_billingCycle == BillingCycle.Quarterly)"
                                       @onchange="() => SetBillingCycle(BillingCycle.Quarterly)" />
                                <div class="ashare-option-content">
                                    <span class="ashare-option-label">@L["Quarterly"]</span>
                                    <span class="ashare-option-price">@_selectedPlan.QuarterlyPrice.Value.ToString("N0") @_selectedPlan.Currency</span>
                                    @{ var quarterlyDiscount = CalculateDiscount(_selectedPlan.MonthlyPrice * 3, _selectedPlan.QuarterlyPrice.Value); }
                                    @if (quarterlyDiscount > 0)
                                    {
                                        <span class="ashare-option-discount">@L["Save"] @quarterlyDiscount%</span>
                                    }
                                </div>
                            </label>
                        }

                        @if (_selectedPlan.AnnualPrice.HasValue)
                        {
                            <label class="ashare-billing-option @(_billingCycle == BillingCycle.Annual ? "selected" : "")">
                                <input type="radio" name="billing" checked="@(_billingCycle == BillingCycle.Annual)"
                                       @onchange="() => SetBillingCycle(BillingCycle.Annual)" />
                                <div class="ashare-option-content">
                                    <span class="ashare-option-label">@L["Annual"]</span>
                                    <span class="ashare-option-price">@_selectedPlan.AnnualPrice.Value.ToString("N0") @_selectedPlan.Currency</span>
                                    @{ var annualDiscount = CalculateDiscount(_selectedPlan.MonthlyPrice * 12, _selectedPlan.AnnualPrice.Value); }
                                    @if (annualDiscount > 0)
                                    {
                                        <span class="ashare-option-discount">@L["Save"] @annualDiscount%</span>
                                    }
                                </div>
                            </label>
                        }
                    </div>
                </div>

                @* Price Breakdown *@
                <div class="ashare-price-breakdown">
                    <div class="ashare-price-row">
                        <span>@L["Subtotal"]</span>
                        <span>@GetSelectedPrice().ToString("N2") @_selectedPlan.Currency</span>
                    </div>
                    @if (_selectedPlan.TrialDays > 0 && _currentSubscription == null)
                    {
                        <div class="ashare-price-row trial">
                            <span>@L["FreeTrial"]</span>
                            <span>@_selectedPlan.TrialDays @L["Days"]</span>
                        </div>
                    }
                    <div class="ashare-price-row tax">
                        <span>@L["VAT"] (15%)</span>
                        <span>@(GetSelectedPrice() * 0.15m).ToString("N2") @_selectedPlan.Currency</span>
                    </div>
                    <div class="ashare-price-row total">
                        <span>@L["Total"]</span>
                        <span>@(GetSelectedPrice() * 1.15m).ToString("N2") @_selectedPlan.Currency</span>
                    </div>
                </div>

                @* Error Message *@
                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="ashare-payment-error">
                        <i class="bi bi-exclamation-triangle"></i>
                        <span>@_errorMessage</span>
                        <button class="ashare-error-dismiss" @onclick="() => _errorMessage = null">
                            <i class="bi bi-x"></i>
                        </button>
                    </div>
                }

                @* Payment Button *@
                <div class="ashare-checkout-actions">
                    <button class="ac-btn ac-btn-primary ac-btn-lg ac-btn-block"
                            disabled="@_isProcessing"
                            @onclick="ProcessPayment">
                        @if (_isProcessing)
                        {
                            <div class="ac-spinner ac-spinner-sm"></div>
                            <span>@L["Processing"]</span>
                        }
                        else if (_selectedPlan.TrialDays > 0 && _currentSubscription == null)
                        {
                            <i class="bi bi-gift"></i>
                            <span>@L["StartFreeTrial"]</span>
                        }
                        else
                        {
                            <i class="bi bi-credit-card"></i>
                            <span>@L["PayNow"]</span>
                        }
                    </button>

                    <p class="ashare-terms-notice">
                        <i class="bi bi-shield-check"></i>
                        @L["PaymentSecureNotice"]
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string PlanSlug { get; set; } = string.Empty;
    [SupplyParameterFromQuery] public int? Cycle { get; set; }

    private bool _isLoading = true;
    private bool _isProcessing = false;
    private bool _showPaymentWebView = false;
    private string? _paymentUrl;
    private string? _paymentId;

    private string? _errorMessage;

    // SignalR for payment notifications
    private IDisposable? _notificationSubscription;
    private bool _isConnectedToSignalR;
    private bool _waitingForPaymentResult;

    private SubscriptionPlanDto? _selectedPlan;
    private SubscriptionDto? _currentSubscription;
    private BillingCycle _billingCycle = BillingCycle.Monthly;

    protected override async Task OnInitializedAsync()
    {
        if (Cycle.HasValue && Enum.IsDefined(typeof(BillingCycle), Cycle.Value))
        {
            _billingCycle = (BillingCycle)Cycle.Value;
        }

        await LoadPlan();
    }

    private async Task LoadPlan()
    {
        _isLoading = true;

        try
        {
            var plans = await ApiService.GetSubscriptionPlansAsync();
            _selectedPlan = plans.FirstOrDefault(p =>
                p.Slug.Equals(PlanSlug, StringComparison.OrdinalIgnoreCase));

            // TODO: Get current subscription from API
            // _currentSubscription = await ApiService.GetHostSubscriptionAsync(vendorId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading plan: {ex.Message}");
        }

        _isLoading = false;
    }

    private void SetBillingCycle(BillingCycle cycle)
    {
        _billingCycle = cycle;
    }

    private decimal GetSelectedPrice()
    {
        if (_selectedPlan == null) return 0;

        return _billingCycle switch
        {
            BillingCycle.Quarterly => _selectedPlan.QuarterlyPrice ?? _selectedPlan.MonthlyPrice * 3,
            BillingCycle.SemiAnnual => _selectedPlan.SemiAnnualPrice ?? _selectedPlan.MonthlyPrice * 6,
            BillingCycle.Annual => _selectedPlan.AnnualPrice ?? _selectedPlan.MonthlyPrice * 12,
            _ => _selectedPlan.MonthlyPrice
        };
    }

    private int CalculateDiscount(decimal original, decimal discounted)
    {
        if (original <= 0) return 0;
        return (int)Math.Round((1 - discounted / original) * 100);
    }

    /// <summary>
    /// Get the absolute return URL based on current browser location
    /// </summary>
    private string GetPaymentReturnUrl()
    {
        // Get the base URI from NavigationManager (e.g., https://localhost:57217/)
        var baseUri = NavigationManager.BaseUri.TrimEnd('/');
        return $"{baseUri}/host/payment/callback";
    }

    private async Task ProcessPayment()
    {
        if (_selectedPlan == null) return;

        _isProcessing = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            var returnUrl = GetPaymentReturnUrl();
            Console.WriteLine($"[SubscriptionCheckout] Creating subscription payment with returnUrl: {returnUrl}");

            // Create subscription and get payment URL
            var response = await ApiService.CreateSubscriptionPaymentAsync(new CreateSubscriptionPaymentRequest
            {
                PlanId = _selectedPlan.Id,
                BillingCycle = _billingCycle,
            });

            Console.WriteLine($"[SubscriptionCheckout] Response: Success={response?.Success}, PaymentUrl={response?.PaymentUrl?.Substring(0, Math.Min(50, response?.PaymentUrl?.Length ?? 0))}...");

            if (response != null && !string.IsNullOrEmpty(response.PaymentUrl))
            {
                _paymentUrl = response.PaymentUrl;
                _paymentId = response.PaymentId;
                Console.WriteLine($"[SubscriptionCheckout] PaymentId: {_paymentId}");

                // ÿßŸÑÿ™ÿ≠ŸÇŸÇ ŸÖŸÜ ÿØÿπŸÖ ÿßŸÑÿØŸÅÿπ ÿØÿßÿÆŸÑ ÿßŸÑÿ™ÿ∑ÿ®ŸäŸÇ (WebView)
                if (PaymentService.SupportsInAppPayment)
                {
                    Console.WriteLine("[SubscriptionCheckout] Using in-app WebView for payment");

                    // ÿßŸÑÿßÿ™ÿµÿßŸÑ ÿ®ŸÄ SignalR ŸÑŸÑÿßÿ≥ÿ™ŸÖÿßÿπ ŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™ ÿßŸÑÿØŸÅÿπ (ŸÉÿ®ÿØŸäŸÑ ÿßÿ≠ÿ™Ÿäÿßÿ∑Ÿä)
                    await ConnectAndSubscribeToPayment(_paymentId);

                    // ŸÅÿ™ÿ≠ ÿµŸÅÿ≠ÿ© ÿßŸÑÿØŸÅÿπ ŸÅŸä WebView ÿØÿßÿÆŸÑ ÿßŸÑÿ™ÿ∑ÿ®ŸäŸÇ
                    // Ÿäÿ™ŸÖ ÿßÿπÿ™ÿ±ÿßÿ∂ ÿ±ÿßÿ®ÿ∑ ÿßŸÑŸÄ callback ŸÑŸÖÿπÿ±ŸÅÿ© ŸÜÿ™Ÿäÿ¨ÿ© ÿßŸÑÿØŸÅÿπ
                    var result = await PaymentService.OpenPaymentInAppAsync(_paymentUrl, "/host/payment/callback");

                    Console.WriteLine($"[SubscriptionCheckout] Payment result: Success={result.Success}, Message={result.Message}");

                    // ŸÖÿπÿßŸÑÿ¨ÿ© ÿßŸÑŸÜÿ™Ÿäÿ¨ÿ©
                    if (result.Success)
                    {
                        Navigation.NavigateTo("/host/subscription?success=true");
                        return;
                    }
                    else if (result.Cancelled)
                    {
                        // ÿßŸÑŸÖÿ≥ÿ™ÿÆÿØŸÖ ÿ£ŸÑÿ∫Ÿâ ÿßŸÑÿØŸÅÿπ - ŸÜÿ®ŸÇŸâ ŸÅŸä ÿßŸÑÿµŸÅÿ≠ÿ©
                        _errorMessage = null;
                        Console.WriteLine("[SubscriptionCheckout] Payment cancelled by user");
                    }
                    else
                    {
                        // ŸÅÿ¥ŸÑ ÿßŸÑÿØŸÅÿπ
                        _errorMessage = result.Message ?? L["PaymentFailed"];
                        Console.WriteLine($"[SubscriptionCheckout] Payment failed: {result.Message}");
                    }
                }
                else
                {
                    // Fallback: ŸÅÿ™ÿ≠ ŸÅŸä ÿßŸÑŸÖÿ™ÿµŸÅÿ≠ ÿßŸÑÿÆÿßÿ±ÿ¨Ÿä ŸÖÿπ ÿßŸÑÿßÿπÿ™ŸÖÿßÿØ ÿπŸÑŸâ SignalR
                    Console.WriteLine("[SubscriptionCheckout] In-app payment not supported, using external browser");

                    // ÿßŸÑÿßÿ™ÿµÿßŸÑ ÿ®ŸÄ SignalR ŸÑŸÑÿßÿ≥ÿ™ŸÖÿßÿπ ŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™ ÿßŸÑÿØŸÅÿπ
                    await ConnectAndSubscribeToPayment(_paymentId);

                    _waitingForPaymentResult = true;
                    var success = await PaymentService.OpenPaymentPageAsync(_paymentUrl);
                    if (!success)
                    {
                        _showPaymentWebView = true;
                        Console.WriteLine("[SubscriptionCheckout] Auto-open failed, showing manual link");
                    }
                    else
                    {
                        Console.WriteLine("[SubscriptionCheckout] Payment page opened - waiting for SignalR notification");
                    }
                }
            }
            else if (response?.RequiresPayment == false)
            {
                // Free trial or free plan - no payment needed
                Console.WriteLine("[SubscriptionCheckout] No payment required, redirecting...");
                Navigation.NavigateTo("/host/subscription?success=true");
                return;
            }
            else
            {
                // API returned but no payment URL
                _errorMessage = L["PaymentInitError"];
                Console.WriteLine($"[SubscriptionCheckout] Error: No payment URL. Response: {response?.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[SubscriptionCheckout] Exception: {ex.Message}");
            _errorMessage = ex.Message;
        }

        _isProcessing = false;
        StateHasChanged();
    }

    /// <summary>
    /// Connect to SignalR and subscribe to payment notifications
    /// </summary>
    private async Task ConnectAndSubscribeToPayment(string? paymentId)
    {
        if (string.IsNullOrEmpty(paymentId)) return;

        try
        {
            // Connect to SignalR if not already connected
            if (!_isConnectedToSignalR)
            {
                Console.WriteLine("[SubscriptionCheckout] Connecting to SignalR...");
                await RealtimeClient.ConnectAsync(serviceName: "Ashare", hubPath: "/hubs/notifications");
                _isConnectedToSignalR = true;
                Console.WriteLine("[SubscriptionCheckout] ‚úÖ Connected to SignalR");

                // Subscribe to ReceiveMessage
                _notificationSubscription = RealtimeClient.On<string, JsonElement>("ReceiveMessage", HandlePaymentMessage);
            }

            // Subscribe to payment notifications for this paymentId
            Console.WriteLine($"[SubscriptionCheckout] Subscribing to payment notifications for {paymentId}...");
            await RealtimeClient.SendAsync("SubscribeToPayment", paymentId);
            Console.WriteLine($"[SubscriptionCheckout] ‚úÖ Subscribed to payment_{paymentId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[SubscriptionCheckout] ‚ö†Ô∏è SignalR connection failed: {ex.Message}");
            // Continue without SignalR - fallback to manual result handling
        }
    }

    /// <summary>
    /// Handle payment messages from SignalR
    /// </summary>
    private void HandlePaymentMessage(string method, JsonElement data)
    {
        Console.WriteLine($"[SubscriptionCheckout] üì® ReceiveMessage: method={method}");

        if (method == "PaymentSubscribed")
        {
            Console.WriteLine($"[SubscriptionCheckout] ‚úÖ PaymentSubscribed confirmed: {data.GetRawText()}");
            return;
        }

        if (method == "PaymentSuccess" || method == "PaymentFailed")
        {
            var isSuccess = method == "PaymentSuccess";
            Console.WriteLine($"[SubscriptionCheckout] üéâ Payment result received: {method}");

            try
            {
                var orderId = data.TryGetProperty("OrderId", out var orderIdProp) ? orderIdProp.GetString() : null;
                var transactionId = data.TryGetProperty("TransactionId", out var txProp) ? txProp.GetString() : null;
                var message = data.TryGetProperty("Message", out var msgProp) ? msgProp.GetString() : null;

                Console.WriteLine($"[SubscriptionCheckout] OrderId={orderId}, TransactionId={transactionId}, Message={message}");

                // Check if this notification is for our payment
                if (!string.IsNullOrEmpty(_paymentId) && (orderId == _paymentId || transactionId == _paymentId))
                {
                    Console.WriteLine("[SubscriptionCheckout] ‚úÖ This is our payment!");

                    InvokeAsync(async () =>
                    {
                        _waitingForPaymentResult = false;

                        // Unsubscribe from payment notifications
                        if (_isConnectedToSignalR && !string.IsNullOrEmpty(_paymentId))
                        {
                            try
                            {
                                await RealtimeClient.SendAsync("UnsubscribeFromPayment", _paymentId);
                            }
                            catch { /* ignore */ }
                        }

                        // Navigate to result page
                        if (isSuccess)
                        {
                            Navigation.NavigateTo("/host/subscription?success=true");
                        }
                        else
                        {
                            Navigation.NavigateTo($"/host/subscription?error={Uri.EscapeDataString(message ?? "ŸÅÿ¥ŸÑÿ™ ÿπŸÖŸÑŸäÿ© ÿßŸÑÿØŸÅÿπ")}");
                        }
                    });
                }
                else
                {
                    Console.WriteLine($"[SubscriptionCheckout] ‚è≠Ô∏è Not our payment - expected {_paymentId}");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[SubscriptionCheckout] ‚ö†Ô∏è Error parsing payment result: {ex.Message}");
            }
        }
    }

    private void HandlePaymentCompleted(PaymentResult result)
    {
        if (result.Success)
        {
            Navigation.NavigateTo("/host/subscription?success=true");
        }
        else
        {
            Navigation.NavigateTo($"/host/subscription?error={Uri.EscapeDataString(result.Message ?? "Payment failed")}");
        }
    }

    private async Task HandlePaymentCancelled()
    {
        _showPaymentWebView = false;
        _waitingForPaymentResult = false;

        // Unsubscribe from payment notifications
        if (_isConnectedToSignalR && !string.IsNullOrEmpty(_paymentId))
        {
            try
            {
                await RealtimeClient.SendAsync("UnsubscribeFromPayment", _paymentId);
            }
            catch { /* ignore */ }
        }

        _paymentUrl = null;
        _paymentId = null;
    }

    public async ValueTask DisposeAsync()
    {
        _notificationSubscription?.Dispose();

        // Unsubscribe from payment notifications
        if (_isConnectedToSignalR && !string.IsNullOrEmpty(_paymentId))
        {
            try
            {
                await RealtimeClient.SendAsync("UnsubscribeFromPayment", _paymentId);
            }
            catch { /* ignore */ }
        }

        if (_isConnectedToSignalR)
        {
            try
            {
                await RealtimeClient.DisconnectAsync();
            }
            catch { /* ignore */ }
        }
    }
}

