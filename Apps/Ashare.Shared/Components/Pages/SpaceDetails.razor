    private string GetRelativeDate(DateTime date)
    {
        var diff = DateTime.Now - date;

        if (diff.TotalDays < 1)
            return "اليوم";
        if (diff.TotalDays < 2)
            return "أمس";
        if (diff.TotalDays < 7)
            return $"منذ {(int)diff.TotalDays} أيام";
        if (diff.TotalDays < 30)
            return $"منذ {(int)(diff.TotalDays / 7)} أسابيع";
        if (diff.TotalDays < 365)
            return $"منذ {(int)(diff.TotalDays / 30)} أشهر";
        return date.ToString("yyyy/MM/dd");
    }

