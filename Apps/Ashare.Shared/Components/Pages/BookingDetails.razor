@page "/booking/{BookingId:guid}"
@using ACommerce.Client.Auth
@inject AshareApiService ApiService
@inject IAppNavigationService Navigation
@inject TokenManager TokenManager

<div class="ac-page ashare-booking-details">
    @if (_isLoading)
    {
        <div class="ashare-loading">
            <div class="ac-spinner"></div>
            <span>جاري التحميل...</span>
        </div>
    }
    else if (_booking == null)
    {
        <div class="ashare-error-state">
            <i class="bi bi-exclamation-circle"></i>
            <h2>الحجز غير موجود</h2>
            <button class="ac-btn ac-btn-primary" @onclick="GoBack">العودة</button>
        </div>
    }
    else
    {
        @* Header *@
        <div class="ashare-details-header">
            <button class="ashare-back-btn" @onclick="GoBack">
                <i class="bi bi-arrow-right"></i>
            </button>
            <h1>@(_isHost ? "طلب حجز وارد" : "تفاصيل الحجز")</h1>
        </div>

        @* Status Banner *@
        <div class="ashare-status-banner @GetStatusClass(_booking.Status)">
            <i class="bi @GetStatusIcon(_booking.Status)"></i>
            <div class="ashare-status-content">
                <span class="ashare-status-label">@GetStatusText(_booking.Status)</span>
                <span class="ashare-status-date">@GetStatusDate()</span>
            </div>
        </div>

        @* Host Actions - أزرار القبول والرفض للمالك *@
        @if (_isHost && _booking.Status == BookingStatus.Pending)
        {
            <div class="ashare-host-actions-card">
                <div class="ashare-host-actions-header">
                    <i class="bi bi-bell"></i>
                    <span>طلب حجز جديد</span>
                </div>
                <p>لديك طلب حجز جديد. يرجى مراجعة التفاصيل والرد على الطلب.</p>
                <div class="ashare-host-actions-buttons">
                    <button class="ac-btn ac-btn-success ac-btn-lg" @onclick="ShowConfirmModal">
                        <i class="bi bi-check-lg"></i>
                        قبول الحجز
                    </button>
                    <button class="ac-btn ac-btn-outline-danger ac-btn-lg" @onclick="ShowRejectModal">
                        <i class="bi bi-x-lg"></i>
                        رفض الحجز
                    </button>
                </div>
            </div>
        }

        @* Space Info *@
        <div class="ashare-details-card">
            <div class="ashare-space-summary" @onclick="ViewSpace">
                <div class="ashare-space-image">
                    @if (!string.IsNullOrEmpty(_booking.SpaceImage))
                    {
                        <img src="@_booking.SpaceImage" alt="@_booking.SpaceName" />
                    }
                    else
                    {
                        <div class="ashare-no-image">
                            <i class="bi bi-building"></i>
                        </div>
                    }
                </div>
                <div class="ashare-space-info">
                    <h3>@_booking.SpaceName</h3>
                    @if (!string.IsNullOrEmpty(_booking.SpaceLocation))
                    {
                        <p class="ashare-space-location">
                            <i class="bi bi-geo-alt"></i>
                            @_booking.SpaceLocation
                        </p>
                    }
                </div>
                <i class="bi bi-chevron-left"></i>
            </div>
        </div>

        @* Booking Details *@
        <div class="ashare-details-card">
            <h2 class="ashare-card-title">تفاصيل الحجز</h2>

            <div class="ashare-details-row">
                <span class="ashare-details-label">رقم الحجز</span>
                <span class="ashare-details-value">@_booking.Id.ToString().Substring(0, 8).ToUpper()</span>
            </div>

            <div class="ashare-details-row">
                <span class="ashare-details-label">تاريخ الحجز</span>
                <span class="ashare-details-value">@_booking.Date.ToString("yyyy/MM/dd")</span>
            </div>

            <div class="ashare-details-row">
                <span class="ashare-details-label">الوقت</span>
                <span class="ashare-details-value">@_booking.StartTime.ToString(@"hh\:mm") - @_booking.EndTime.ToString(@"hh\:mm")</span>
            </div>

            <div class="ashare-details-row">
                <span class="ashare-details-label">عدد الضيوف</span>
                <span class="ashare-details-value">@_booking.GuestsCount شخص</span>
            </div>
        </div>

        @* Payment Details *@
        <div class="ashare-details-card">
            <h2 class="ashare-card-title">تفاصيل الدفع</h2>

            <div class="ashare-details-row">
                <span class="ashare-details-label">السعر الكلي</span>
                <span class="ashare-details-value">@_booking.TotalPrice ر.س</span>
            </div>

            <div class="ashare-details-row">
                <span class="ashare-details-label">العربون المدفوع</span>
                <span class="ashare-details-value highlight">@_booking.DepositAmount ر.س</span>
            </div>

            <div class="ashare-details-row">
                <span class="ashare-details-label">المتبقي</span>
                <span class="ashare-details-value">@(_booking.TotalPrice - _booking.DepositAmount) ر.س</span>
            </div>

            @if (_booking.IsDepositPaid)
            {
                <div class="ashare-payment-status paid">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>تم دفع العربون</span>
                </div>
            }
        </div>

        @* Protection Info *@
        <div class="ashare-details-card ashare-protection-card">
            <div class="ashare-protection-header">
                <i class="bi bi-shield-check"></i>
                <h2>حماية المبلغ</h2>
            </div>
            <p>مبلغك محمي بالكامل. لن يتم تحويله للمعلن إلا بعد تأكيدك، ويمكنك استرداده فوراً في أي وقت.</p>

            @if (_booking.Status == BookingStatus.Pending || _booking.Status == BookingStatus.Confirmed)
            {
                <div class="ashare-protection-actions">
                    <button class="ac-btn ac-btn-success" @onclick="ReleaseDeposit" disabled="@(_booking.Status != BookingStatus.Confirmed)">
                        <i class="bi bi-check-lg"></i>
                        تأكيد وتحويل للمعلن
                    </button>
                    <button class="ac-btn ac-btn-outline-danger" @onclick="RequestRefund">
                        <i class="bi bi-arrow-counterclockwise"></i>
                        استرداد المبلغ
                    </button>
                </div>
            }
        </div>

        @* Actions *@
        <div class="ashare-details-actions">
            @if (_booking.Status == BookingStatus.Pending)
            {
                <button class="ac-btn ac-btn-outline-danger ac-btn-block" @onclick="CancelBooking">
                    <i class="bi bi-x-circle"></i>
                    إلغاء الحجز
                </button>
            }

            <button class="ac-btn ac-btn-outline-primary ac-btn-block" @onclick="ContactSupport">
                <i class="bi bi-headset"></i>
                تواصل مع الدعم
            </button>
        </div>

        @* Notes *@
        @if (!string.IsNullOrEmpty(_booking.CustomerNotes))
        {
            <div class="ashare-details-card">
                <h2 class="ashare-card-title">ملاحظاتك</h2>
                <p class="ashare-notes">@_booking.CustomerNotes</p>
            </div>
        }
    }
</div>

@* Cancel Confirmation Modal *@
@if (_showCancelModal)
{
    <div class="ac-modal-overlay" @onclick="() => _showCancelModal = false">
        <div class="ac-modal" @onclick:stopPropagation="true">
            <div class="ac-modal-header">
                <h3>إلغاء الحجز</h3>
                <button class="ac-modal-close" @onclick="() => _showCancelModal = false">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="ac-modal-body">
                <p>هل أنت متأكد من إلغاء هذا الحجز؟</p>
                <div class="ashare-cancel-info">
                    <i class="bi bi-info-circle"></i>
                    <span>سيتم استرداد العربون خلال 3-5 أيام عمل</span>
                </div>
            </div>
            <div class="ac-modal-footer">
                <button class="ac-btn ac-btn-secondary" @onclick="() => _showCancelModal = false">تراجع</button>
                <button class="ac-btn ac-btn-danger" @onclick="ConfirmCancel">تأكيد الإلغاء</button>
            </div>
        </div>
    </div>
}

@* Refund Confirmation Modal *@
