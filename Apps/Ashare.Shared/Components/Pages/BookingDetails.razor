@* Host Confirm Booking Modal - قبول الحجز *@
@if (_showConfirmModal)
{
    <div class="ac-modal-overlay" @onclick="() => _showConfirmModal = false">
        <div class="ac-modal" @onclick:stopPropagation="true">
            <div class="ac-modal-header">
                <h3>قبول الحجز</h3>
