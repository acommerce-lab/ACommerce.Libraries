@* Host Reject Booking Modal - رفض الحجز *@
@if (_showRejectModal)
{
    <div class="ac-modal-overlay" @onclick="() => _showRejectModal = false">
        <div class="ac-modal" @onclick:stopPropagation="true">
            <div class="ac-modal-header">
                <h3>رفض الحجز</h3>
                <button class="ac-modal-close" @onclick="() => _showRejectModal = false">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="ac-modal-body">
                <div class="ashare-reject-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <p>سيتم رفض الحجز واسترداد العربون للعميل تلقائياً.</p>
                </div>
                <div class="ac-form-group">
                    <label>سبب الرفض (اختياري)</label>
                    <textarea class="ac-input" rows="3" @bind="_rejectReason"
                              placeholder="أدخل سبب الرفض..."></textarea>
                </div>
            </div>
            <div class="ac-modal-footer">
                <button class="ac-btn ac-btn-secondary" @onclick="() => _showRejectModal = false">تراجع</button>
                <button class="ac-btn ac-btn-danger" @onclick="RejectBookingByHost">رفض الحجز</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid BookingId { get; set; }

    private BookingItem? _booking;
    private bool _isLoading = true;
    private bool _isHost; // هل المستخدم الحالي هو صاحب العرض
    private bool _showCancelModal;
    private bool _showRefundModal;
    private bool _showReleaseModal;
    private bool _showConfirmModal; // للمالك - قبول الحجز
    private bool _showRejectModal; // للمالك - رفض الحجز
    private string _rejectReason = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadBookingAsync();
    }

    private async Task LoadBookingAsync()
    {
        _isLoading = true;
        try
        {
            _booking = await ApiService.GetBookingByIdAsync(BookingId);

            // تحديد إذا كان المستخدم هو المالك أو العميل
            var currentUserId = TokenManager.GetUserIdFromToken();
            if (_booking != null && !string.IsNullOrEmpty(currentUserId))
            {
                _isHost = _booking.HostId.ToString().Equals(currentUserId, StringComparison.OrdinalIgnoreCase);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[BookingDetails] Error loading booking: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateBack();
    }

    private void ViewSpace()
    {
        if (_booking != null)
        {
            Navigation.NavigateTo($"/space/{_booking.SpaceId}");
        }
    }

    private string GetStatusClass(BookingStatus status) => status switch
    {
        BookingStatus.Pending => "pending",
        BookingStatus.Confirmed => "confirmed",
        BookingStatus.Completed => "completed",
        BookingStatus.Cancelled => "cancelled",
        _ => ""
    };

    private string GetStatusIcon(BookingStatus status) => status switch
    {
        BookingStatus.Pending => "bi-hourglass-split",
        BookingStatus.Confirmed => "bi-check-circle",
        BookingStatus.Completed => "bi-check-circle-fill",
        BookingStatus.Cancelled => "bi-x-circle",
        _ => "bi-circle"
    };

    private string GetStatusText(BookingStatus status) => status switch
    {
        BookingStatus.Pending => "قيد المراجعة",
        BookingStatus.Confirmed => "مؤكد",
        BookingStatus.Completed => "مكتمل",
        BookingStatus.Cancelled => "ملغي",
        _ => ""
    };

    private string GetStatusDate()
    {
        if (_booking == null) return "";

        return _booking.Status switch
        {
            BookingStatus.Confirmed => _booking.ConfirmedAt?.ToString("yyyy/MM/dd") ?? "",
            BookingStatus.Cancelled => _booking.CancelledAt?.ToString("yyyy/MM/dd") ?? "",
            _ => _booking.CreatedAt.ToString("yyyy/MM/dd")
        };
    }

    private void CancelBooking()
    {
        _showCancelModal = true;
    }

    private async Task ConfirmCancel()
    {
        if (_booking == null) return;

        try
        {
            await ApiService.CancelBookingAsync(_booking.Id);
            await LoadBookingAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[BookingDetails] Error cancelling booking: {ex.Message}");
        }
        finally
        {
            _showCancelModal = false;
        }
    }

    private void RequestRefund()
    {
        _showRefundModal = true;
    }

    private async Task ConfirmRefund()
    {
        if (_booking == null) return;

        try
        {
            await ApiService.RefundBookingAsync(_booking.Id, "طلب استرداد من العميل");
            await LoadBookingAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[BookingDetails] Error refunding booking: {ex.Message}");
        }
        finally
        {
            _showRefundModal = false;
        }
    }

    private void ReleaseDeposit()
    {
        _showReleaseModal = true;
    }

    private async Task ConfirmRelease()
    {
        if (_booking == null) return;

        try
        {
            await ApiService.ReleaseBookingDepositAsync(_booking.Id);
            await LoadBookingAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[BookingDetails] Error releasing deposit: {ex.Message}");
        }
        finally
        {
            _showReleaseModal = false;
        }
    }

    private void ContactSupport()
    {
        Navigation.NavigateTo($"/support?booking={BookingId}");
    }

    // ═══════════════════════════════════════════════════════════════════
    // Host Actions - إجراءات المالك
    // ═══════════════════════════════════════════════════════════════════

    private void ShowConfirmModal()
    {
        _showConfirmModal = true;
    }

    private void ShowRejectModal()
    {
        _rejectReason = "";
        _showRejectModal = true;
    }

    private async Task ConfirmBookingByHost()
    {
        if (_booking == null) return;

        try
        {
            var success = await ApiService.ConfirmBookingAsync(_booking.Id);
            if (success)
            {
                // إعادة تحميل الحجز لعرض الحالة الجديدة
                await LoadBookingAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[BookingDetails] Error confirming booking: {ex.Message}");
        }
        finally
        {
            _showConfirmModal = false;
        }
    }

    private async Task RejectBookingByHost()
    {
        if (_booking == null) return;

        try
        {
            var success = await ApiService.RejectBookingAsync(_booking.Id, _rejectReason);
            if (success)
            {
                await LoadBookingAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[BookingDetails] Error rejecting booking: {ex.Message}");
        }
        finally
        {
            _showRejectModal = false;
        }
    }
}

