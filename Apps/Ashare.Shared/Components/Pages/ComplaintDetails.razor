@code {
    [Parameter] public Guid Id { get; set; }

    private bool _isLoading = true;
    private bool _isLoggedIn;
    private bool _isSendingReply;

    private ComplaintResponse? _complaint;
    private List<ComplaintReplyResponse>? _replies;
    private string _replyMessage = "";
    private int _selectedRating;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthAndLoad();
    }

    private async Task CheckAuthAndLoad()
    {
        _isLoading = true;

        try
        {
            var token = await AuthClient.GetTokenAsync();
            _isLoggedIn = !string.IsNullOrEmpty(token);

            if (!_isLoggedIn)
            {
                Navigation.NavigateTo("/login", forceLoad: true);
                return;
            }

            try
            {
                var userInfo = await AuthClient.GetMeAsync();
                if (userInfo == null)
                {
                    TokenManager.ClearToken();
                    await GuestMode.DisableGuestModeAsync();
                    Navigation.NavigateTo("/login", forceLoad: true);
                    return;
                }
            }
            catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                TokenManager.ClearToken();
                await GuestMode.DisableGuestModeAsync();
                Navigation.NavigateTo("/login", forceLoad: true);
                return;
            }

            await LoadComplaint();
        }
        catch
        {
            TokenManager.ClearToken();
            await GuestMode.DisableGuestModeAsync();
            Navigation.NavigateTo("/login", forceLoad: true);
            return;
        }

        _isLoading = false;
    }

    private async Task LoadComplaint()
    {
        try
        {
            _complaint = await ComplaintsClient.GetComplaintAsync(Id);
            if (_complaint != null)
            {
                _replies = await ComplaintsClient.GetRepliesAsync(Id);
            }
        }
        catch
        {
            _complaint = null;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/complaints");
    }

    private void SelectRating(int rating)
    {
        _selectedRating = rating;
    }

    private async Task SubmitRating()
    {
        if (_selectedRating <= 0) return;

        try
        {
            await ComplaintsClient.RateComplaintAsync(Id, _selectedRating);
            await LoadComplaint();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error submitting rating: {ex.Message}");
        }
    }

    private async Task SendReply()
    {
        if (string.IsNullOrWhiteSpace(_replyMessage)) return;

        _isSendingReply = true;

        try
        {
            var result = await ComplaintsClient.AddReplyAsync(Id, _replyMessage);
            if (result != null)
            {
                _replyMessage = "";
                _replies = await ComplaintsClient.GetRepliesAsync(Id);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error sending reply: {ex.Message}");
        }

        _isSendingReply = false;
    }

    private string GetStatusClass(string status) => status.ToLower() switch
    {
        "open" => "status-open",
        "inprogress" => "status-inprogress",
        "resolved" => "status-resolved",
        "closed" => "status-closed",
        _ => ""
    };

    private string GetStatusLabel(string status) => status switch
    {
        "Open" => L["Open"],
        "InProgress" => L["InProgress"],
        "Resolved" => L["Resolved"],
        "Closed" => L["Closed"],
        _ => status
    };

    private string GetTypeIcon(string type) => type switch
    {
        "Complaint" => "bi-exclamation-triangle",
        "Suggestion" => "bi-lightbulb",
        "Inquiry" => "bi-question-circle",
        "Refund" => "bi-arrow-counterclockwise",
        _ => "bi-ticket"
    };

    private string GetTypeLabel(string type) => type switch
    {
        "Complaint" => L["Complaint"],
        "Suggestion" => L["Suggestion"],
        "Inquiry" => L["Inquiry"],
        "Refund" => L["Refund"],
        _ => type
    };

    private string GetCategoryLabel(string category) => category switch
    {
        "Other" => L["Other"],
        "Order" => L["Bookings"],
        "Product" => L["Spaces"],
        "Payment" => L["Payment"],
        "Account" => L["Account"],
        "Technical" => L["Technical"],
        _ => category
    };
}
