@page "/complaints/{Id:guid}"
@using ACommerce.Client.Auth
@using ACommerce.Client.Complaints
@inject AuthClient AuthClient
@inject ComplaintsClient ComplaintsClient
@inject TokenManager TokenManager
@inject ACommerce.Templates.Customer.Services.GuestModeService GuestMode
@inject IAppNavigationService Navigation
@inject Ashare.Shared.Services.ThemeService ThemeService
@inject ILocalizationService L

<div class="ac-page ashare-complaint-details @(ThemeService.IsDarkMode ? "ac-dark" : "")" dir="@(L.IsRtl ? "rtl" : "ltr")">

    @* Header *@
    <div class="ashare-page-header">
        <button class="ashare-back-btn" @onclick="GoBack">
            <i class="bi bi-arrow-right"></i>
        </button>
        <h1 class="ashare-page-title">@L["ComplaintDetails"]</h1>
        <div class="ashare-header-spacer"></div>
    </div>

    @if (_isLoading)
    {
        <div class="ashare-loading">
            <div class="ac-spinner"></div>
            <span>@L["Loading"]</span>
        </div>
    }
    else if (!_isLoggedIn)
    {
        <div class="ashare-loading">
            <div class="ac-spinner"></div>
            <span>@L["RedirectingToLogin"]</span>
        </div>
    }
    else if (_complaint == null)
    {
        <AcEmptyState Icon="bi-exclamation-circle"
                      Title="@L["ComplaintNotFound"]"
                      Description="@L["ComplaintNotFoundDescription"]"
                      ActionText="@L["BackToComplaints"]"
                      OnAction="GoBack" />
    }
    else
    {
        @* Complaint Info Card *@
        <div class="ashare-detail-card">
            <div class="ashare-detail-header">
                <div class="ashare-detail-meta">
                    <span class="ashare-ticket-number">#@_complaint.TicketNumber</span>
                    <span class="ashare-detail-date">@_complaint.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <span class="ashare-status-badge @GetStatusClass(_complaint.Status)">
                    @GetStatusLabel(_complaint.Status)
                </span>
            </div>

            <div class="ashare-detail-type">
                <i class="bi @GetTypeIcon(_complaint.Type)"></i>
                <span>@GetTypeLabel(_complaint.Type)</span>
                <span class="ashare-detail-category">@GetCategoryLabel(_complaint.Category)</span>
            </div>

            <h2 class="ashare-detail-title">@_complaint.Title</h2>

            <p class="ashare-detail-description">@_complaint.Description</p>

            @if (_complaint.AssignedToName != null)
            {
                <div class="ashare-assigned-info">
                    <i class="bi bi-person-check"></i>
                    <span>@L["AssignedTo"]: @_complaint.AssignedToName</span>
                </div>
            }

            @* Rating Section (if resolved/closed) *@
            @if (_complaint.Status is "Resolved" or "Closed" && !_complaint.UserRating.HasValue)
            {
                <div class="ashare-rating-section">
                    <h4>@L["RateOurService"]</h4>
                    <div class="ashare-rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var rating = i;
                            <button class="ashare-star @(_selectedRating >= i ? "selected" : "")"
                                    @onclick="() => SelectRating(rating)">
                                <i class="bi @(_selectedRating >= i ? "bi-star-fill" : "bi-star")"></i>
                            </button>
                        }
                    </div>
                    @if (_selectedRating > 0)
                    {
                        <button class="ashare-btn-submit-rating" @onclick="SubmitRating">
                            @L["SubmitRating"]
                        </button>
                    }
                </div>
            }
            else if (_complaint.UserRating.HasValue)
            {
                <div class="ashare-user-rating">
                    <span>@L["YourRating"]:</span>
                    <div class="ashare-rating-display">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi @(i <= _complaint.UserRating ? "bi-star-fill" : "bi-star")"></i>
                        }
                    </div>
                </div>
            }
        </div>

        @* Replies Section *@
        <div class="ashare-replies-section">
            <h3 class="ashare-section-title">
                <i class="bi bi-chat-dots"></i>
                @L["Conversation"]
            </h3>

            <div class="ashare-replies-list">
                @if (_replies == null || !_replies.Any())
                {
                    <div class="ashare-no-replies">
                        <i class="bi bi-chat-square"></i>
                        <span>@L["NoRepliesYet"]</span>
                    </div>
                }
                else
                {
                    @foreach (var reply in _replies)
                    {
                        <div class="ashare-reply @(reply.IsStaff ? "staff" : "user")">
                            <div class="ashare-reply-header">
                                <span class="ashare-reply-sender">
                                    @if (reply.IsStaff)
                                    {
                                        <i class="bi bi-headset"></i>
                                    }
                                    @reply.SenderName
                                </span>
                                <span class="ashare-reply-time">@reply.CreatedAt.ToString("dd/MM HH:mm")</span>
                            </div>
                            <p class="ashare-reply-message">@reply.Message</p>
                        </div>
                    }
                }
            </div>

            @* Reply Input *@
            @if (_complaint.Status is "Open" or "InProgress")
            {
                <div class="ashare-reply-input">
                    <textarea class="ashare-textarea"
                              placeholder="@L["WriteReplyPlaceholder"]"
                              rows="3"
                              @bind="_replyMessage"></textarea>
                    <button class="ashare-send-btn" @onclick="SendReply" disabled="@(_isSendingReply || string.IsNullOrWhiteSpace(_replyMessage))">
                        @if (_isSendingReply)
                        {
                            <div class="ac-spinner-sm"></div>
                        }
                        else
                        {
                            <i class="bi bi-send"></i>
                        }
                    </button>
                </div>
            }
            else
            {
                <div class="ashare-closed-notice">
                    <i class="bi bi-lock"></i>
                    <span>@L["ComplaintClosed"]</span>
                </div>
            }
        </div>
    }
</div>

