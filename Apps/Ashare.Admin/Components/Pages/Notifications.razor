@page "/notifications"
@using Syncfusion.Blazor.Grids
@inject AdminApiService ApiService
@inject IJSRuntime JS

<div class="notifications-page">
    <div class="page-header">
        <div class="header-stats">
            <div class="stat-card">
                <span class="stat-value">@Stats.TotalUsers</span>
                <span class="stat-label">إجمالي المستخدمين</span>
            </div>
            <div class="stat-card">
                <span class="stat-value">@Stats.ActiveUsers</span>
                <span class="stat-label">المستخدمين النشطين</span>
            </div>
            <div class="stat-card highlight">
                <span class="stat-value">@Stats.UsersWithDevices</span>
                <span class="stat-label">لديهم أجهزة مسجلة</span>
            </div>
        </div>
    </div>

    <div class="content-grid">
        <!-- قسم إرسال الإشعار -->
        <div class="card notification-form">
            <h3>إرسال إشعار</h3>

            <div class="form-group">
                <label>عنوان الإشعار *</label>
                <SfTextBox @bind-Value="NotificationTitle" Placeholder="أدخل عنوان الإشعار" />
            </div>

            <div class="form-group">
                <label>نص الإشعار *</label>
                <SfTextBox @bind-Value="NotificationMessage" Placeholder="أدخل نص الإشعار" Multiline="true" />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>نوع الإشعار</label>
                    <SfDropDownList TItem="NotificationTypeOption" TValue="string"
                                    DataSource="@NotificationTypes"
                                    @bind-Value="NotificationType">
                        <DropDownListFieldSettings Text="Label" Value="Value" />
                    </SfDropDownList>
                </div>

                <div class="form-group">
                    <label>الأولوية</label>
                    <SfDropDownList TItem="PriorityOption" TValue="string"
                                    DataSource="@Priorities"
                                    @bind-Value="NotificationPriority">
                        <DropDownListFieldSettings Text="Label" Value="Value" />
                    </SfDropDownList>
                </div>
            </div>

            <div class="form-group">
                <label>رابط الإجراء (اختياري)</label>
                <SfTextBox @bind-Value="ActionUrl" Placeholder="مثال: /booking/123" />
            </div>

            <div class="form-actions">
                <SfButton CssClass="e-primary e-block"
                          OnClick="SendToSelected"
                          Disabled="@(!CanSend || SelectedUsers.Count == 0)">
                    إرسال للمحددين (@SelectedUsers.Count)
                </SfButton>
                <SfButton CssClass="e-warning e-block"
                          OnClick="ShowBroadcastConfirm"
                          Disabled="@(!CanSend)">
                    إرسال للجميع
                </SfButton>
            </div>

            @if (!string.IsNullOrEmpty(ResultMessage))
            {
                <div class="result-message @(IsSuccess ? "success" : "error")">
                    @ResultMessage
                </div>
            }
        </div>

        <!-- قسم اختيار المستخدمين -->
        <div class="card users-section">
            <div class="section-header">
                <h3>اختيار المستخدمين</h3>
                <div class="search-box">
                    <SfTextBox @bind-Value="SearchTerm"
                               Placeholder="بحث بالاسم، البريد، أو الهاتف..."
                               Width="250px" />
                    <SfButton CssClass="e-primary" OnClick="SearchUsers">بحث</SfButton>
                </div>
            </div>

            <SfGrid DataSource="@Users"
                    AllowPaging="true"
                    AllowSelection="true"
                    @ref="UsersGrid">
                <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple" />
                <GridEvents RowSelected="OnRowSelected" RowDeselected="OnRowDeselected" TValue="NotificationUserDto" />
                <GridPageSettings PageSize="10" />
                <GridColumns>
                    <GridColumn Type="ColumnType.CheckBox" Width="50" />
                    <GridColumn Field="@nameof(NotificationUserDto.Name)" HeaderText="الاسم" Width="150" />
                    <GridColumn Field="@nameof(NotificationUserDto.Email)" HeaderText="البريد" Width="180" />
                    <GridColumn Field="@nameof(NotificationUserDto.Phone)" HeaderText="الهاتف" Width="120" />
                    <GridColumn Field="@nameof(NotificationUserDto.DeviceCount)" HeaderText="الأجهزة" Width="80">
                        <Template>
                            @{
                                var user = (context as NotificationUserDto);
                                <span class="device-badge @(user?.HasDevices == true ? "has-device" : "no-device")">
                                    @(user?.DeviceCount ?? 0)
                                </span>
                            }
                        </Template>
                    </GridColumn>
                    <GridColumn HeaderText="الحالة" Width="100">
                        <Template>
                            @{
                                var user = (context as NotificationUserDto);
                                @if (user?.HasDevices == true)
                                {
                                    <span class="status-badge active">متصل</span>
                                }
                                else
                                {
                                    <span class="status-badge inactive">غير متصل</span>
                                }
                            }
                        </Template>
                    </GridColumn>
                </GridColumns>
            </SfGrid>

            <div class="selection-info">
                تم تحديد <strong>@SelectedUsers.Count</strong> مستخدم
                @if (SelectedUsers.Any(u => !u.HasDevices))
                {
                    <span class="warning-text">
                        (بعضهم ليس لديه أجهزة مسجلة - سيتم إرسال إشعار داخلي فقط)
                    </span>
                }
            </div>
        </div>
    </div>
</div>

<!-- Broadcast Confirmation Dialog -->
<SfDialog @bind-Visible="@ShowBroadcastDialog"
          Header="تأكيد الإرسال الجماعي"
          Width="400px"
          IsModal="true"
          ShowCloseIcon="true">
    <DialogTemplates>
        <Content>
            <p>هل أنت متأكد من إرسال هذا الإشعار لجميع المستخدمين النشطين؟</p>
            <p><strong>العنوان:</strong> @NotificationTitle</p>
            <p><strong>الرسالة:</strong> @NotificationMessage</p>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="إلغاء" OnClick="@(() => ShowBroadcastDialog = false)" />
        <DialogButton Content="إرسال للجميع" IsPrimary="true" OnClick="BroadcastNotification" />
    </DialogButtons>
</SfDialog>

<style>
