    }

    @@media (max-width: 1024px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private SfGrid<NotificationUserDto>? UsersGrid;

    private List<NotificationUserDto> Users { get; set; } = new();
    private List<NotificationUserDto> SelectedUsers { get; set; } = new();
    private NotificationStatsDto Stats { get; set; } = new();

    private string NotificationTitle { get; set; } = string.Empty;
    private string NotificationMessage { get; set; } = string.Empty;
    private string NotificationType { get; set; } = "info";
    private string NotificationPriority { get; set; } = "normal";
    private string? ActionUrl { get; set; }
    private string SearchTerm { get; set; } = string.Empty;

    private string? ResultMessage { get; set; }
    private bool IsSuccess { get; set; }
    private bool ShowBroadcastDialog { get; set; }
    private bool IsSending { get; set; }

    private bool CanSend => !IsSending &&
                            !string.IsNullOrWhiteSpace(NotificationTitle) &&
                            !string.IsNullOrWhiteSpace(NotificationMessage);

    private List<NotificationTypeOption> NotificationTypes = new()
    {
        new() { Value = "info", Label = "معلومات" },
        new() { Value = "success", Label = "نجاح" },
        new() { Value = "warning", Label = "تحذير" },
        new() { Value = "promo", Label = "عرض ترويجي" },
        new() { Value = "system", Label = "نظام" }
    };

    private List<PriorityOption> Priorities = new()
    {
        new() { Value = "low", Label = "منخفضة" },
        new() { Value = "normal", Label = "عادية" },
        new() { Value = "high", Label = "عالية" },
        new() { Value = "urgent", Label = "عاجلة" }
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadStats();
        await LoadUsers();
    }

    private async Task LoadStats()
    {
        Stats = await ApiService.GetNotificationStatsAsync();
    }

    private async Task LoadUsers()
    {
        var result = await ApiService.GetNotificationUsersAsync(SearchTerm);
        Users = result ?? new List<NotificationUserDto>();
    }

    private async Task SearchUsers()
    {
        await LoadUsers();
    }

    private void OnRowSelected(RowSelectEventArgs<NotificationUserDto> args)
    {
        if (args.Data != null && !SelectedUsers.Any(u => u.UserId == args.Data.UserId))
        {
            SelectedUsers.Add(args.Data);
        }
    }

    private void OnRowDeselected(RowDeselectEventArgs<NotificationUserDto> args)
    {
        if (args.Data != null)
        {
            SelectedUsers.RemoveAll(u => u.UserId == args.Data.UserId);
        }
    }

    private async Task SendToSelected()
    {
        if (SelectedUsers.Count == 0)
        {
            ResultMessage = "الرجاء تحديد مستخدم واحد على الأقل";
            IsSuccess = false;
            return;
        }

        IsSending = true;
        ResultMessage = null;

        try
        {
            var result = await ApiService.SendNotificationAsync(new SendNotificationRequestDto
            {
                Title = NotificationTitle,
                Message = NotificationMessage,
                Type = NotificationType,
                Priority = NotificationPriority,
                ActionUrl = ActionUrl,
                UserIds = SelectedUsers.Select(u => u.UserId).ToList()
            });

            if (result != null)
            {
                IsSuccess = result.SuccessCount > 0;
                ResultMessage = $"تم إرسال {result.SuccessCount} من {result.TotalSent} إشعار بنجاح";

                if (result.FailedCount > 0)
                {
                    ResultMessage += $" ({result.FailedCount} فشل)";
                }

                // مسح النموذج بعد الإرسال الناجح
                if (IsSuccess)
                {
                    ClearForm();
                }
            }
            else
            {
                IsSuccess = false;
                ResultMessage = "فشل في إرسال الإشعارات";
            }
        }
        catch (Exception ex)
        {
            IsSuccess = false;
            ResultMessage = $"خطأ: {ex.Message}";
        }
        finally
        {
            IsSending = false;
        }
    }

    private void ShowBroadcastConfirm()
    {
        ShowBroadcastDialog = true;
    }

    private async Task BroadcastNotification()
    {
        ShowBroadcastDialog = false;
        IsSending = true;
        ResultMessage = null;

        try
        {
            var result = await ApiService.BroadcastNotificationAsync(new BroadcastNotificationRequestDto
            {
                Title = NotificationTitle,
                Message = NotificationMessage,
                Type = NotificationType,
                Priority = NotificationPriority,
                ActionUrl = ActionUrl
            });

            if (result != null)
            {
                IsSuccess = result.SuccessCount > 0;
                ResultMessage = $"تم إرسال الإشعار لـ {result.SuccessCount} مستخدم بنجاح";

                if (result.FailedCount > 0)
                {
                    ResultMessage += $" ({result.FailedCount} فشل)";
                }

                if (IsSuccess)
                {
                    ClearForm();
                }
            }
            else
            {
                IsSuccess = false;
                ResultMessage = "فشل في إرسال الإشعار الجماعي";
            }
        }
        catch (Exception ex)
        {
            IsSuccess = false;
            ResultMessage = $"خطأ: {ex.Message}";
        }
        finally
        {
            IsSending = false;
        }
    }

    private void ClearForm()
    {
        NotificationTitle = string.Empty;
        NotificationMessage = string.Empty;
        NotificationType = "info";
        NotificationPriority = "normal";
        ActionUrl = null;
    }

    public class NotificationTypeOption
    {
        public string Value { get; set; } = string.Empty;
        public string Label { get; set; } = string.Empty;
    }

    public class PriorityOption
    {
        public string Value { get; set; } = string.Empty;
        public string Label { get; set; } = string.Empty;
    }
}
