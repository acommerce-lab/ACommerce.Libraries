    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>ACommerce.Authentication.AspNetCore</PackageId>
    <Version>1.0.3</Version>
    <Authors>ACommerce</Authors>
    <Description># ACommerce.Authentication.AspNetCore</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="FluentValidation.AspNetCore" Version="11.3.1" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.10" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\auth\ACommerce.Authentication.Abstractions\ACommerce.Authentication.Abstractions.csproj" />
